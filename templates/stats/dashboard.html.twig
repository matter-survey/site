{% extends 'base.html.twig' %}

{% block title %}Matter Survey - Dashboard{% endblock %}

{% block header_subtitle %}<p>Ecosystem insights from community-contributed Matter device data</p>{% endblock %}

{% block extra_styles %}
    .dashboard-nav {
        display: flex;
        gap: 0.5rem;
        margin-bottom: 2rem;
        flex-wrap: wrap;
    }

    .dashboard-nav a {
        padding: 0.5rem 1rem;
        background: white;
        border: 1px solid var(--gray-200);
        border-radius: 0.375rem;
        text-decoration: none;
        color: var(--gray-700);
        font-size: 0.875rem;
    }

    .dashboard-nav a:hover {
        background: var(--gray-100);
    }

    .dashboard-nav a.active {
        background: var(--primary);
        color: white;
        border-color: var(--primary);
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .stat-card {
        background: white;
        padding: 1.25rem;
        border-radius: 0.5rem;
        border: 1px solid var(--gray-200);
    }

    .stat-card .value {
        font-size: 2rem;
        font-weight: 700;
        color: var(--primary);
    }

    .stat-card .label {
        font-size: 0.875rem;
        color: var(--gray-500);
        margin-top: 0.25rem;
    }

    .dashboard-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .dashboard-card {
        background: white;
        border-radius: 0.5rem;
        border: 1px solid var(--gray-200);
        padding: 1.25rem;
    }

    .dashboard-card h2 {
        font-size: 1rem;
        font-weight: 600;
        color: var(--gray-900);
        margin-bottom: 1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .dashboard-card h2 a {
        font-size: 0.75rem;
        color: var(--primary);
        text-decoration: none;
    }

    .dashboard-card h2 a:hover {
        text-decoration: underline;
    }

    .chart-bar {
        display: flex;
        align-items: center;
        margin-bottom: 0.75rem;
    }

    .chart-bar .label {
        width: 120px;
        font-size: 0.875rem;
        color: var(--gray-700);
        flex-shrink: 0;
    }

    .chart-bar .bar-container {
        flex: 1;
        height: 24px;
        background: var(--gray-100);
        border-radius: 0.25rem;
        overflow: hidden;
        margin: 0 0.75rem;
    }

    .chart-bar .bar {
        height: 100%;
        background: var(--primary);
        border-radius: 0.25rem;
        transition: width 0.3s ease;
    }

    .chart-bar .count {
        width: 50px;
        text-align: right;
        font-size: 0.875rem;
        color: var(--gray-500);
        flex-shrink: 0;
    }

    .category-lights .bar { background: #fbbf24; }
    .category-climate .bar { background: #3b82f6; }
    .category-sensors .bar { background: #10b981; }
    .category-security .bar { background: #ef4444; }
    .category-appliances .bar { background: #8b5cf6; }
    .category-entertainment .bar { background: #ec4899; }
    .category-energy .bar { background: #f97316; }
    .category-system .bar { background: #6b7280; }

    .spec-version-badge {
        display: inline-block;
        padding: 0.125rem 0.5rem;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 500;
        margin-right: 0.25rem;
    }

    .spec-1-0 { background: #dbeafe; color: #1d4ed8; }
    .spec-1-2 { background: #dcfce7; color: #15803d; }
    .spec-1-3 { background: #fef3c7; color: #b45309; }
    .spec-1-4 { background: #fce7f3; color: #be185d; }

    .recent-device {
        padding: 0.75rem 0;
        border-bottom: 1px solid var(--gray-100);
    }

    .recent-device:last-child {
        border-bottom: none;
    }

    .recent-device a {
        color: var(--gray-900);
        text-decoration: none;
        font-weight: 500;
    }

    .recent-device a:hover {
        color: var(--primary);
    }

    .recent-device .meta {
        font-size: 0.75rem;
        color: var(--gray-500);
        margin-top: 0.25rem;
    }
{% endblock %}

{% block body %}
    <div class="dashboard-nav">
        <a href="{{ path('stats_dashboard') }}" class="active">Overview</a>
        <a href="{{ path('stats_clusters') }}">Clusters</a>
        <a href="{{ path('stats_device_types') }}">Device Types</a>
        <a href="{{ path('stats_binding') }}">Binding</a>
        <a href="{{ path('stats_versions') }}">Versions</a>
        <a href="{{ path('stats_pairings') }}">Pairings</a>
        <a href="{{ path('device_index') }}">Browse Devices</a>
        <a href="{{ path('vendor_index') }}">Vendors</a>
    </div>

    <div class="stats-grid">
        <div class="stat-card">
            <div class="value">{{ stats.total_devices|number_format }}</div>
            <div class="label">Known Devices</div>
        </div>
        <div class="stat-card">
            <div class="value">{{ stats.total_vendors|number_format }}</div>
            <div class="label">Vendors</div>
        </div>
        <div class="stat-card">
            <div class="value">{{ stats.bindable_devices|number_format }}</div>
            <div class="label">Support Binding</div>
        </div>
        <div class="stat-card">
            <div class="value">{{ stats.total_installations|number_format }}</div>
            <div class="label">Contributors</div>
        </div>
        <div class="stat-card">
            <div class="value">{{ stats.total_submissions|number_format }}</div>
            <div class="label">Submissions</div>
        </div>
    </div>

    <div class="dashboard-grid">
        <div class="dashboard-card">
            <h2>
                Device Categories
                <a href="{{ path('stats_device_types') }}">View all &rarr;</a>
            </h2>
            {% set maxCategory = categoryDistribution|first %}
            {% for category, count in categoryDistribution %}
                <div class="chart-bar category-{{ category|lower|replace({' ': '-'}) }}">
                    <span class="label">{{ category }}</span>
                    <div class="bar-container">
                        <div class="bar" style="width: {{ maxCategory > 0 ? (count / maxCategory * 100) : 0 }}%"></div>
                    </div>
                    <span class="count">{{ count }}</span>
                </div>
            {% else %}
                <p style="color: var(--gray-500); font-size: 0.875rem;">No data available yet.</p>
            {% endfor %}
        </div>

        <div class="dashboard-card">
            <h2>
                Top Vendors
                <a href="{{ path('vendor_index') }}">View all &rarr;</a>
            </h2>
            {% set maxVendor = topVendors|first %}
            {% for vendor in topVendors %}
                <div class="chart-bar">
                    <span class="label">
                        <a href="{{ path('vendor_show', {slug: vendor.slug}) }}" style="color: inherit; text-decoration: none;">
                            {{ vendor.name|length > 15 ? vendor.name|slice(0, 15) ~ '...' : vendor.name }}
                        </a>
                    </span>
                    <div class="bar-container">
                        <div class="bar" style="width: {{ maxVendor.device_count > 0 ? (vendor.device_count / maxVendor.device_count * 100) : 0 }}%"></div>
                    </div>
                    <span class="count">{{ vendor.device_count }}</span>
                </div>
            {% else %}
                <p style="color: var(--gray-500); font-size: 0.875rem;">No vendors yet.</p>
            {% endfor %}
        </div>

        <div class="dashboard-card">
            <h2>Matter Spec Versions</h2>
            {% set maxVersion = specVersionDistribution|first %}
            {% for version, count in specVersionDistribution %}
                <div class="chart-bar">
                    <span class="label">
                        <span class="spec-version-badge spec-{{ version|replace({'.': '-'}) }}">{{ version }}</span>
                    </span>
                    <div class="bar-container">
                        <div class="bar" style="width: {{ maxVersion > 0 ? (count / maxVersion * 100) : 0 }}%"></div>
                    </div>
                    <span class="count">{{ count }}</span>
                </div>
            {% else %}
                <p style="color: var(--gray-500); font-size: 0.875rem;">No data available yet.</p>
            {% endfor %}
            <p style="font-size: 0.75rem; color: var(--gray-400); margin-top: 0.5rem;">
                Based on device types seen in the survey
            </p>
        </div>

        <div class="dashboard-card">
            <h2>
                Recently Discovered
                <a href="{{ path('device_index') }}">Browse all &rarr;</a>
            </h2>
            {% for device in recentDevices %}
                <div class="recent-device">
                    <a href="{{ path('device_show', {slug: device.slug}) }}">
                        {{ device.product_name ?? 'Unknown Product' }}
                    </a>
                    <div class="meta">
                        {{ device.vendor_name ?? 'Unknown Vendor' }}
                        &middot;
                        First seen {{ device.first_seen|date('M j, Y') }}
                    </div>
                </div>
            {% else %}
                <p style="color: var(--gray-500); font-size: 0.875rem;">No devices yet.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
