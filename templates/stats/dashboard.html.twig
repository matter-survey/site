{% extends 'base.html.twig' %}

{% block title %}Matter Survey - Dashboard{% endblock %}

{% block header_subtitle %}<p>Real-world Matter device adoption data contributed by Home Assistant users</p>{% endblock %}

{% block extra_styles %}
    .dashboard-nav {
        display: flex;
        gap: 0.5rem;
        margin-bottom: 2rem;
        flex-wrap: wrap;
    }

    .dashboard-nav a {
        padding: 0.5rem 1rem;
        background: white;
        border: 1px solid var(--gray-200);
        border-radius: 0.375rem;
        text-decoration: none;
        color: var(--gray-700);
        font-size: 0.875rem;
    }

    .dashboard-nav a:hover {
        background: var(--gray-100);
    }

    .dashboard-nav a.active {
        background: var(--primary);
        color: white;
        border-color: var(--primary);
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .stat-card {
        background: white;
        padding: 1.25rem;
        border-radius: 0.5rem;
        border: 1px solid var(--gray-200);
        cursor: help;
    }

    .stat-card .value {
        font-size: 2rem;
        font-weight: 700;
        color: var(--primary);
    }

    .stat-card .label {
        font-size: 0.875rem;
        color: var(--gray-500);
        margin-top: 0.25rem;
    }

    .stat-card .label .help-icon {
        display: inline-block;
        width: 14px;
        height: 14px;
        line-height: 14px;
        text-align: center;
        font-size: 10px;
        background: var(--gray-200);
        color: var(--gray-500);
        border-radius: 50%;
        margin-left: 0.25rem;
        vertical-align: middle;
    }

    .dashboard-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .dashboard-card {
        background: white;
        border-radius: 0.5rem;
        border: 1px solid var(--gray-200);
        padding: 1.25rem;
    }

    .dashboard-card h2 {
        font-size: 1rem;
        font-weight: 600;
        color: var(--gray-900);
        margin-bottom: 1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .dashboard-card h2 a {
        font-size: 0.75rem;
        color: var(--primary);
        text-decoration: none;
    }

    .dashboard-card h2 a:hover {
        text-decoration: underline;
    }

    .chart-bar {
        display: flex;
        align-items: center;
        margin-bottom: 0.75rem;
    }

    .chart-bar .label {
        width: 120px;
        font-size: 0.875rem;
        color: var(--gray-700);
        flex-shrink: 0;
    }

    .chart-bar .bar-container {
        flex: 1;
        height: 24px;
        background: var(--gray-100);
        border-radius: 0.25rem;
        overflow: hidden;
        margin: 0 0.75rem;
    }

    .chart-bar .bar {
        height: 100%;
        background: var(--primary);
        border-radius: 0.25rem;
        transition: width 0.3s ease;
    }

    .chart-bar .count {
        width: 50px;
        text-align: right;
        font-size: 0.875rem;
        color: var(--gray-500);
        flex-shrink: 0;
    }

    .category-lights .bar { background: #fbbf24; }
    .category-climate .bar { background: #3b82f6; }
    .category-sensors .bar { background: #10b981; }
    .category-security .bar { background: #ef4444; }
    .category-appliances .bar { background: #8b5cf6; }
    .category-entertainment .bar { background: #ec4899; }
    .category-energy .bar { background: #f97316; }
    .category-system .bar { background: #6b7280; }

    .spec-version-badge {
        display: inline-block;
        padding: 0.125rem 0.5rem;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 500;
        margin-right: 0.25rem;
    }

    .spec-1-0 { background: #dbeafe; color: #1d4ed8; }
    .spec-1-2 { background: #dcfce7; color: #15803d; }
    .spec-1-3 { background: #fef3c7; color: #b45309; }
    .spec-1-4 { background: #fce7f3; color: #be185d; }

    .recent-device {
        padding: 0.75rem 0;
        border-bottom: 1px solid var(--gray-100);
    }

    .recent-device:last-child {
        border-bottom: none;
    }

    .recent-device a {
        color: var(--gray-900);
        text-decoration: none;
        font-weight: 500;
    }

    .recent-device a:hover {
        color: var(--primary);
    }

    .recent-device .meta {
        font-size: 0.75rem;
        color: var(--gray-500);
        margin-top: 0.25rem;
    }

    /* De-emphasized System category */
    .chart-bar.system-category {
        opacity: 0.5;
    }

    .chart-bar.system-category .label {
        font-size: 0.8rem;
    }

    .system-note {
        font-size: 0.75rem;
        color: var(--gray-400);
        margin-top: 0.5rem;
        font-style: italic;
    }

    /* Category highlights section */
    .highlights-section {
        margin-bottom: 2rem;
    }

    .highlights-section h2 {
        font-size: 1rem;
        font-weight: 600;
        color: var(--gray-700);
        margin-bottom: 1rem;
    }

    .highlights-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1rem;
    }

    .highlight-card {
        background: white;
        border-radius: 0.5rem;
        border: 1px solid var(--gray-200);
        padding: 1rem;
        display: flex;
        flex-direction: column;
    }

    .highlight-card .category-label {
        font-size: 0.75rem;
        color: var(--gray-500);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 0.5rem;
    }

    .highlight-card .product-name {
        font-weight: 600;
        color: var(--gray-900);
        margin-bottom: 0.25rem;
    }

    .highlight-card .product-name a {
        color: inherit;
        text-decoration: none;
    }

    .highlight-card .product-name a:hover {
        color: var(--primary);
    }

    .highlight-card .vendor-name {
        font-size: 0.875rem;
        color: var(--gray-500);
    }

    .highlight-card .vendor-name a {
        color: inherit;
        text-decoration: none;
    }

    .highlight-card .vendor-name a:hover {
        text-decoration: underline;
    }

    .highlight-card.category-lights { border-left: 3px solid #fbbf24; }
    .highlight-card.category-climate { border-left: 3px solid #3b82f6; }
    .highlight-card.category-sensors { border-left: 3px solid #10b981; }
    .highlight-card.category-security { border-left: 3px solid #ef4444; }
    .highlight-card.category-appliances { border-left: 3px solid #8b5cf6; }
    .highlight-card.category-entertainment { border-left: 3px solid #ec4899; }
    .highlight-card.category-energy { border-left: 3px solid #f97316; }
{% endblock %}

{% block body %}
    {{ include('stats/_nav.html.twig', { active: 'stats_dashboard' }) }}

    {{ include('stats/_header.html.twig', {
        title: 'Matter Ecosystem Dashboard',
        subtitle: 'Real-world adoption data from Matter smart home devices',
        color: 'blue'
    }) }}

    <div class="stats-grid">
        <div class="stat-card" title="Unique product models (vendor + product ID combinations) seen in submissions">
            <div class="value">{{ stats.total_devices|number_format }}</div>
            <div class="label">Known Products <span class="help-icon">?</span></div>
        </div>
        <div class="stat-card" title="Unique manufacturers registered in the Matter DCL (Distributed Compliance Ledger)">
            <div class="value">{{ stats.total_vendors|number_format }}</div>
            <div class="label">Vendors <span class="help-icon">?</span></div>
        </div>
        <div class="stat-card" title="Products with binding cluster, enabling device-to-device automation without going through a hub">
            <div class="value">{{ stats.bindable_devices|number_format }}</div>
            <div class="label">Support Binding <span class="help-icon">?</span></div>
        </div>
        <div class="stat-card" title="Unique Home Assistant installations that have submitted data">
            <div class="value">{{ stats.total_installations|number_format }}</div>
            <div class="label">Contributors <span class="help-icon">?</span></div>
        </div>
        <div class="stat-card" title="Total data submissions received (one installation can submit multiple times as devices are added)">
            <div class="value">{{ stats.total_submissions|number_format }}</div>
            <div class="label">Submissions <span class="help-icon">?</span></div>
        </div>
    </div>

    {% if categoryHighlights|length > 0 %}
    <div class="highlights-section">
        <h2>Most Popular by Category</h2>
        <div class="highlights-grid">
            {% for highlight in categoryHighlights %}
                <div class="highlight-card category-{{ highlight.category|lower|replace({' ': '-'}) }}">
                    <span class="category-label">{{ highlight.category }}</span>
                    <span class="product-name">
                        <a href="{{ path('device_show', {slug: highlight.slug}) }}">{{ highlight.product_name }}</a>
                    </span>
                    <span class="vendor-name">
                        {% if highlight.vendor_slug %}
                            <a href="{{ path('vendor_show', {slug: highlight.vendor_slug}) }}">{{ highlight.vendor_name }}</a>
                        {% else %}
                            {{ highlight.vendor_name }}
                        {% endif %}
                    </span>
                </div>
            {% endfor %}
        </div>
    </div>
    {% endif %}

    <div class="dashboard-grid">
        <div class="dashboard-card">
            <h2>
                Device Categories
                <a href="{{ path('stats_device_types') }}">View all &rarr;</a>
            </h2>
            <div style="max-width: 280px; margin: 0 auto;">
                {{ render_chart(categoryChart) }}
            </div>
            {% if categoryDistribution.System is defined and categoryDistribution.System > 0 %}
                <p class="system-note">System types ({{ categoryDistribution.System }}) excluded from chart</p>
            {% endif %}
        </div>

        <div class="dashboard-card">
            <h2>
                Top Vendors
                <a href="{{ path('vendor_index') }}">View all &rarr;</a>
            </h2>
            <div style="height: 300px;">
                {{ render_chart(vendorChart) }}
            </div>
        </div>

        <div class="dashboard-card">
            <h2>Matter Spec Versions</h2>
            {{ render_chart(specChart) }}
            <p style="font-size: 0.75rem; color: var(--gray-400); margin-top: 0.5rem;">
                Based on device types seen in the survey
            </p>
        </div>

        <div class="dashboard-card">
            <h2>
                Recently Discovered
                <a href="{{ path('device_index') }}">Browse all &rarr;</a>
            </h2>
            {% for device in recentDevices %}
                <div class="recent-device">
                    <a href="{{ path('device_show', {slug: device.slug}) }}">
                        {{ device.product_name ?? 'Unknown Product' }}
                    </a>
                    <div class="meta">
                        {{ device.vendor_name ?? 'Unknown Vendor' }}
                        &middot;
                        First seen {{ device.first_seen|date('M j, Y') }}
                    </div>
                </div>
            {% else %}
                <p style="color: var(--gray-500); font-size: 0.875rem;">No devices yet.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
