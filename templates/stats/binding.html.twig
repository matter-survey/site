{% extends 'base.html.twig' %}

{% block title %}Matter Survey - Binding Compatibility{% endblock %}

{% block header_subtitle %}<p>Devices that support direct device-to-device control via binding</p>{% endblock %}

{% block extra_styles %}
    .dashboard-nav {
        display: flex;
        gap: 0.5rem;
        margin-bottom: 2rem;
        flex-wrap: wrap;
    }

    .dashboard-nav a {
        padding: 0.5rem 1rem;
        background: white;
        border: 1px solid var(--gray-200);
        border-radius: 0.375rem;
        text-decoration: none;
        color: var(--gray-700);
        font-size: 0.875rem;
    }

    .dashboard-nav a:hover {
        background: var(--gray-100);
    }

    .dashboard-nav a.active {
        background: var(--primary);
        color: white;
        border-color: var(--primary);
    }

    .stats-row {
        display: flex;
        gap: 1rem;
        margin-bottom: 2rem;
        flex-wrap: wrap;
    }

    .stat-card {
        background: white;
        padding: 1rem 1.5rem;
        border-radius: 0.5rem;
        border: 1px solid var(--gray-200);
    }

    .stat-card .value {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--primary);
    }

    .stat-card .label {
        font-size: 0.75rem;
        color: var(--gray-500);
    }

    .info-box {
        background: var(--blue-100);
        border-radius: 0.5rem;
        padding: 1rem 1.25rem;
        margin-bottom: 2rem;
        font-size: 0.875rem;
        color: var(--blue-700);
    }

    .info-box strong {
        display: block;
        margin-bottom: 0.25rem;
    }

    .section {
        background: white;
        border-radius: 0.5rem;
        border: 1px solid var(--gray-200);
        margin-bottom: 2rem;
    }

    .section-header {
        padding: 1rem 1.25rem;
        border-bottom: 1px solid var(--gray-200);
    }

    .section-header h2 {
        font-size: 1rem;
        font-weight: 600;
        margin: 0;
    }

    .section-header p {
        font-size: 0.75rem;
        color: var(--gray-500);
        margin: 0.25rem 0 0;
    }

    .category-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 1rem;
        padding: 1.25rem;
    }

    .category-card {
        padding: 1rem;
        background: var(--gray-50);
        border-radius: 0.5rem;
    }

    .category-card .name {
        font-weight: 600;
        font-size: 0.875rem;
        margin-bottom: 0.5rem;
    }

    .category-card .percentage {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--primary);
    }

    .category-card .details {
        font-size: 0.75rem;
        color: var(--gray-500);
        margin-top: 0.25rem;
    }

    .progress-bar {
        width: 100%;
        height: 6px;
        background: var(--gray-200);
        border-radius: 3px;
        overflow: hidden;
        margin-top: 0.5rem;
    }

    .progress-bar .fill {
        height: 100%;
        background: var(--green-700);
        border-radius: 3px;
    }

    .device-table {
        width: 100%;
        border-collapse: collapse;
    }

    .device-table th,
    .device-table td {
        padding: 0.75rem 1.25rem;
        text-align: left;
        border-bottom: 1px solid var(--gray-100);
    }

    .device-table th {
        font-size: 0.75rem;
        font-weight: 600;
        color: var(--gray-500);
        text-transform: uppercase;
    }

    .device-table tr:last-child td {
        border-bottom: none;
    }

    .device-table tr:hover td {
        background: var(--gray-50);
    }

    .device-table a {
        color: var(--gray-900);
        text-decoration: none;
        font-weight: 500;
    }

    .device-table a:hover {
        color: var(--primary);
    }

    .badge {
        display: inline-block;
        padding: 0.125rem 0.5rem;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 500;
    }

    .badge-binding {
        background: var(--green-100);
        color: var(--green-700);
    }

    .badge-endpoints {
        background: var(--gray-100);
        color: var(--gray-700);
    }
{% endblock %}

{% block body %}
    <div class="dashboard-nav">
        <a href="{{ path('stats_dashboard') }}">Overview</a>
        <a href="{{ path('stats_clusters') }}">Clusters</a>
        <a href="{{ path('stats_device_types') }}">Device Types</a>
        <a href="{{ path('stats_binding') }}" class="active">Binding</a>
        <a href="{{ path('stats_versions') }}">Versions</a>
        <a href="{{ path('stats_pairings') }}">Pairings</a>
        <a href="{{ path('device_index') }}">Browse Devices</a>
        <a href="{{ path('vendor_index') }}">Vendors</a>
    </div>

    <div class="info-box">
        <strong>What is Binding?</strong>
        Matter Binding enables direct device-to-device communication without going through a hub.
        For example, a light switch can directly control a light bulb &mdash; even if your WiFi goes down.
        <a href="{{ path('page_glossary') }}#binding" style="color: inherit; text-decoration: underline;">Learn more</a>
    </div>

    <div class="stats-row">
        <div class="stat-card">
            <div class="value">{{ stats.bindable_devices|number_format }}</div>
            <div class="label">Binding-Capable Devices</div>
        </div>
        <div class="stat-card">
            <div class="value">{{ stats.total_devices > 0 ? ((stats.bindable_devices / stats.total_devices) * 100)|number_format(1) : 0 }}%</div>
            <div class="label">Of All Devices</div>
        </div>
        <div class="stat-card">
            <div class="value">{{ stats.total_devices|number_format }}</div>
            <div class="label">Total Devices</div>
        </div>
    </div>

    <div class="section">
        <div class="section-header">
            <h2>Binding Support by Category</h2>
            <p>Percentage of devices in each category that support binding</p>
        </div>
        <div class="category-grid">
            {% for category, data in bindingByCategory %}
                <div class="category-card">
                    <div class="name">{{ category }}</div>
                    <div class="percentage">{{ data.percentage }}%</div>
                    <div class="details">{{ data.with_binding }} of {{ data.total }} devices</div>
                    <div class="progress-bar">
                        <div class="fill" style="width: {{ data.percentage }}%"></div>
                    </div>
                </div>
            {% else %}
                <p style="color: var(--gray-500); grid-column: 1 / -1; text-align: center;">No category data available yet.</p>
            {% endfor %}
        </div>
    </div>

    <div class="section">
        <div class="section-header">
            <h2>Binding-Capable Devices</h2>
            <p>All devices with the Binding cluster (0x001E)</p>
        </div>
        <table class="device-table">
            <thead>
                <tr>
                    <th>Device</th>
                    <th>Vendor</th>
                    <th>Submissions</th>
                    <th>Endpoints</th>
                </tr>
            </thead>
            <tbody>
                {% for device in bindingDevices %}
                    <tr>
                        <td>
                            <a href="{{ path('device_show', {slug: device.slug}) }}">
                                {{ device.product_name ?? 'Unknown Product' }}
                            </a>
                        </td>
                        <td>
                            {% if device.vendor_slug %}
                                <a href="{{ path('vendor_show', {slug: device.vendor_slug}) }}" style="font-weight: normal;">
                                    {{ device.vendor_name ?? 'Unknown' }}
                                </a>
                            {% else %}
                                {{ device.vendor_name ?? 'Unknown' }}
                            {% endif %}
                        </td>
                        <td>{{ device.submission_count }}</td>
                        <td>
                            <span class="badge badge-endpoints">{{ device.endpoint_count }}</span>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" style="text-align: center; color: var(--gray-500);">
                            No binding-capable devices found yet.
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
