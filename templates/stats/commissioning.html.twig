{% extends 'base.html.twig' %}

{% block title %}Commissioning Guides - Matter Survey{% endblock %}

{% block og_title %}Matter Device Commissioning Guides{% endblock %}
{% block og_description %}Setup instructions and commissioning guides for {{ stats.withInstructions }} Matter devices. Find factory reset steps, ICD wake-up instructions, and setup complexity ratings.{% endblock %}

{% block extra_styles %}
    .dashboard-nav {
        display: flex;
        gap: 0.5rem;
        margin-bottom: 2rem;
        flex-wrap: wrap;
    }

    .dashboard-nav a {
        padding: 0.5rem 1rem;
        background: white;
        border: 1px solid var(--gray-200);
        border-radius: 0.375rem;
        text-decoration: none;
        color: var(--gray-700);
        font-size: 0.875rem;
    }

    .dashboard-nav a:hover {
        background: var(--gray-100);
    }

    .dashboard-nav a.active {
        background: var(--primary);
        color: white;
        border-color: var(--primary);
    }

    .page-header {
        background: linear-gradient(135deg, #1e40af 0%, #3b82f6 100%);
        color: white;
        padding: 2rem;
        border-radius: 0.5rem;
        margin-bottom: 1.5rem;
    }

    .page-header h1 {
        font-size: 1.75rem;
        margin-bottom: 0.5rem;
    }

    .page-header p {
        opacity: 0.9;
        margin: 0;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .stat-card {
        background: white;
        padding: 1rem;
        border-radius: 0.5rem;
        border: 1px solid var(--gray-200);
        text-align: center;
    }

    .stat-card .value {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--primary);
    }

    .stat-card .label {
        font-size: 0.75rem;
        color: var(--gray-500);
        margin-top: 0.25rem;
    }

    .section {
        background: white;
        border-radius: 0.5rem;
        border: 1px solid var(--gray-200);
        margin-bottom: 1.5rem;
    }

    .section-header {
        padding: 1rem 1.5rem;
        border-bottom: 1px solid var(--gray-200);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .section-header h2 {
        font-size: 1.125rem;
        margin: 0;
    }

    .section-header .count {
        background: var(--gray-100);
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
        font-size: 0.875rem;
        color: var(--gray-600);
    }

    .complexity-tabs {
        display: flex;
        gap: 0.5rem;
        padding: 1rem 1.5rem;
        border-bottom: 1px solid var(--gray-200);
        overflow-x: auto;
    }

    .complexity-tab {
        padding: 0.5rem 1rem;
        border-radius: 9999px;
        font-size: 0.875rem;
        cursor: pointer;
        border: 1px solid var(--gray-200);
        background: white;
        transition: all 0.15s;
        white-space: nowrap;
    }

    .complexity-tab:hover {
        background: var(--gray-50);
    }

    .complexity-tab.active {
        background: var(--primary);
        color: white;
        border-color: var(--primary);
    }

    .complexity-tab .count {
        background: rgba(0,0,0,0.1);
        padding: 0.125rem 0.5rem;
        border-radius: 9999px;
        font-size: 0.75rem;
        margin-left: 0.5rem;
    }

    .complexity-0 { border-left: 3px solid #22c55e; }
    .complexity-1 { border-left: 3px solid #3b82f6; }
    .complexity-2 { border-left: 3px solid #f59e0b; }
    .complexity-3 { border-left: 3px solid #ef4444; }

    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 1rem;
        padding: 1.5rem;
    }

    .product-card {
        background: var(--gray-50);
        border-radius: 0.5rem;
        padding: 1rem;
        border-left: 3px solid var(--gray-300);
    }

    .product-card.complexity-0 { border-left-color: #22c55e; }
    .product-card.complexity-1 { border-left-color: #3b82f6; }
    .product-card.complexity-2 { border-left-color: #f59e0b; }
    .product-card.complexity-3 { border-left-color: #ef4444; }

    .product-card h3 {
        font-size: 1rem;
        margin-bottom: 0.25rem;
    }

    .product-card h3 a {
        color: var(--gray-900);
        text-decoration: none;
    }

    .product-card h3 a:hover {
        color: var(--primary);
    }

    .product-card .vendor {
        font-size: 0.875rem;
        color: var(--gray-500);
        margin-bottom: 0.75rem;
    }

    .instruction-block {
        background: white;
        border-radius: 0.375rem;
        padding: 0.75rem;
        margin-bottom: 0.5rem;
        font-size: 0.875rem;
    }

    .instruction-block .label {
        font-weight: 600;
        color: var(--gray-700);
        font-size: 0.75rem;
        text-transform: uppercase;
        margin-bottom: 0.25rem;
    }

    .instruction-block .text {
        color: var(--gray-600);
        line-height: 1.5;
    }

    .badge-complexity {
        display: inline-block;
        padding: 0.125rem 0.5rem;
        border-radius: 9999px;
        font-size: 0.6875rem;
        font-weight: 600;
        text-transform: uppercase;
    }

    .badge-complexity-0 { background: #dcfce7; color: #166534; }
    .badge-complexity-1 { background: #dbeafe; color: #1e40af; }
    .badge-complexity-2 { background: #fef3c7; color: #92400e; }
    .badge-complexity-3 { background: #fee2e2; color: #991b1b; }

    .icd-section {
        background: #fef3c7;
        border: 1px solid #fcd34d;
    }

    .icd-badge {
        display: inline-block;
        padding: 0.125rem 0.5rem;
        background: #fbbf24;
        color: #78350f;
        border-radius: 9999px;
        font-size: 0.6875rem;
        font-weight: 600;
    }

    .empty-state {
        padding: 3rem;
        text-align: center;
        color: var(--gray-500);
    }

    .links-row {
        display: flex;
        gap: 0.5rem;
        margin-top: 0.5rem;
        flex-wrap: wrap;
    }

    .link-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
        padding: 0.25rem 0.5rem;
        background: var(--gray-100);
        border-radius: 0.25rem;
        font-size: 0.75rem;
        text-decoration: none;
        color: var(--gray-600);
    }

    .link-badge:hover {
        background: var(--primary);
        color: white;
    }
{% endblock %}

{% block body %}
    {{ include('stats/_nav.html.twig', { active: 'stats_commissioning' }) }}

    {{ include('stats/_header.html.twig', {
        title: 'Commissioning Guides',
        subtitle: 'Setup instructions, factory reset steps, and commissioning complexity',
        color: 'cyan'
    }) }}

    <div class="stats-grid">
        <div class="stat-card">
            <div class="value">{{ stats.total|number_format }}</div>
            <div class="label">Total Products</div>
        </div>
        <div class="stat-card">
            <div class="value">{{ stats.withInstructions|number_format }}</div>
            <div class="label">With Setup Instructions</div>
        </div>
        <div class="stat-card">
            <div class="value">{{ stats.withFactoryReset|number_format }}</div>
            <div class="label">With Factory Reset</div>
        </div>
        <div class="stat-card">
            <div class="value">{{ stats.withCustomFlow|number_format }}</div>
            <div class="label">Custom Flow Required</div>
        </div>
        <div class="stat-card">
            <div class="value">{{ stats.withIcd|number_format }}</div>
            <div class="label">Battery/ICD Devices</div>
        </div>
    </div>

    {% if productsByComplexity|length > 0 %}
    <div class="section">
        <div class="section-header">
            <h2>Products by Setup Complexity</h2>
        </div>
        <div class="complexity-tabs">
            {% for hint, products in productsByComplexity %}
                <button class="complexity-tab {{ loop.first ? 'active' : '' }}" data-complexity="{{ hint }}">
                    {{ complexityLabels[hint] ?? ('Level ' ~ hint) }}
                    <span class="count">{{ products|length }}</span>
                </button>
            {% endfor %}
        </div>
        {% for hint, products in productsByComplexity %}
            <div class="complexity-content {{ loop.first ? '' : 'hidden' }}" data-complexity="{{ hint }}" style="{{ loop.first ? '' : 'display: none;' }}">
                <div class="product-grid">
                    {% for product in products|slice(0, 50) %}
                        <div class="product-card complexity-{{ product.commissioningInitialStepsHint ?? 0 }}">
                            <div style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 0.5rem;">
                                <div>
                                    <h3><a href="{{ path('device_show', {slug: product.slug}) }}">{{ product.productName ?? 'Unknown Product' }}</a></h3>
                                    <div class="vendor">{{ product.vendorName ?? 'Unknown Vendor' }}</div>
                                </div>
                                <span class="badge-complexity badge-complexity-{{ product.commissioningInitialStepsHint ?? 0 }}">
                                    {{ complexityLabels[product.commissioningInitialStepsHint ?? 0] ?? 'Standard' }}
                                </span>
                            </div>

                            {% if product.commissioningInitialStepsInstruction %}
                                <div class="instruction-block">
                                    <div class="label">Setup Instructions</div>
                                    <div class="text">{{ product.commissioningInitialStepsInstruction }}</div>
                                </div>
                            {% endif %}

                            {% if product.factoryResetStepsInstruction %}
                                <div class="instruction-block">
                                    <div class="label">Factory Reset</div>
                                    <div class="text">{{ product.factoryResetStepsInstruction }}</div>
                                </div>
                            {% endif %}

                            {% if product.productUrl or product.supportUrl or product.userManualUrl %}
                                <div class="links-row">
                                    {% if product.productUrl %}<a href="{{ product.productUrl }}" target="_blank" class="link-badge">Product Page</a>{% endif %}
                                    {% if product.supportUrl %}<a href="{{ product.supportUrl }}" target="_blank" class="link-badge">Support</a>{% endif %}
                                    {% if product.userManualUrl %}<a href="{{ product.userManualUrl }}" target="_blank" class="link-badge">Manual</a>{% endif %}
                                </div>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>
    {% endif %}

    {% if icdProducts|length > 0 %}
    <div class="section icd-section">
        <div class="section-header">
            <h2>Battery-Powered Devices (ICD)</h2>
            <span class="icd-badge">{{ icdProducts|length }} devices</span>
        </div>
        <p style="padding: 0 1.5rem; color: var(--gray-600); font-size: 0.875rem;">
            Intermittently Connected Devices (ICD) are battery-powered and may need manual wake-up for commissioning or updates.
        </p>
        <div class="product-grid">
            {% for product in icdProducts %}
                <div class="product-card" style="border-left-color: #fbbf24;">
                    <h3><a href="{{ path('device_show', {slug: product.slug}) }}">{{ product.productName ?? 'Unknown Product' }}</a></h3>
                    <div class="vendor">{{ product.vendorName ?? 'Unknown Vendor' }}</div>

                    {% if product.icdUserActiveModeTriggerInstruction %}
                        <div class="instruction-block">
                            <div class="label">Wake-Up Instructions</div>
                            <div class="text">{{ product.icdUserActiveModeTriggerInstruction }}</div>
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
    {% endif %}

    <script>
    document.querySelectorAll('.complexity-tab').forEach(tab => {
        tab.addEventListener('click', () => {
            const complexity = tab.dataset.complexity;
            document.querySelectorAll('.complexity-tab').forEach(t => t.classList.remove('active'));
            document.querySelectorAll('.complexity-content').forEach(c => c.style.display = 'none');
            tab.classList.add('active');
            document.querySelector(`.complexity-content[data-complexity="${complexity}"]`).style.display = 'block';
        });
    });
    </script>
{% endblock %}
