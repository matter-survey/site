{% block title %}{{ deviceType.name }} - Matter Survey{% endblock %}

{% block extra_styles %}
    .breadcrumb {
        margin-bottom: 1rem;
        font-size: 0.875rem;
    }

    .breadcrumb a {
        color: var(--primary);
        text-decoration: none;
    }

    .breadcrumb a:hover {
        text-decoration: underline;
    }

    .device-type-header {
        background: white;
        border-radius: 0.5rem;
        border: 1px solid var(--gray-200);
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .device-type-header-content {
        display: flex;
        gap: 1rem;
        align-items: flex-start;
    }

    .device-type-header-icon {
        width: 56px;
        height: 56px;
        background: var(--gray-100);
        border-radius: 0.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.75rem;
        flex-shrink: 0;
    }

    .device-type-header-info {
        flex: 1;
    }

    .device-type-header h1 {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 0.25rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .device-type-header .description {
        color: var(--gray-600);
        font-size: 0.9375rem;
        margin-bottom: 0.75rem;
    }

    .device-type-header .meta {
        color: var(--gray-500);
        font-size: 0.875rem;
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .spec-badge {
        display: inline-block;
        padding: 0.125rem 0.5rem;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 500;
    }

    .spec-1-0 { background: #dbeafe; color: #1d4ed8; }
    .spec-1-2 { background: #dcfce7; color: #15803d; }
    .spec-1-3 { background: #fef3c7; color: #b45309; }
    .spec-1-4 { background: #fce7f3; color: #be185d; }

    .category-tag {
        display: inline-block;
        padding: 0.125rem 0.5rem;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 500;
        background: var(--gray-100);
        color: var(--gray-600);
    }

    .category-tag-lights { background: #fef3c7; color: #b45309; }
    .category-tag-climate { background: #dbeafe; color: #1d4ed8; }
    .category-tag-sensors { background: #dcfce7; color: #15803d; }
    .category-tag-security { background: #fee2e2; color: #dc2626; }
    .category-tag-appliances { background: #ede9fe; color: #7c3aed; }
    .category-tag-entertainment { background: #fce7f3; color: #be185d; }
    .category-tag-energy { background: #ffedd5; color: #c2410c; }
    .category-tag-system { background: #f3f4f6; color: #4b5563; }

    .stats-row {
        display: flex;
        gap: 1rem;
        margin-bottom: 1.5rem;
        flex-wrap: wrap;
    }

    .stat-card {
        background: white;
        padding: 1rem 1.5rem;
        border-radius: 0.5rem;
        border: 1px solid var(--gray-200);
    }

    .stat-card .value {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--primary);
    }

    .stat-card .label {
        font-size: 0.75rem;
        color: var(--gray-500);
    }

    .device-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .device-card {
        background: white;
        border-radius: 0.5rem;
        border: 1px solid var(--gray-200);
        padding: 1rem;
        transition: border-color 0.15s;
    }

    .device-card:hover {
        border-color: var(--primary);
    }

    .device-card a {
        text-decoration: none;
        color: inherit;
    }

    .device-card h3 {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 0.25rem;
        color: var(--gray-900);
    }

    .device-card .vendor {
        font-size: 0.875rem;
        color: var(--gray-500);
        margin-bottom: 0.5rem;
    }

    .device-card .device-meta {
        display: flex;
        gap: 0.75rem;
        font-size: 0.75rem;
        color: var(--gray-500);
        flex-wrap: wrap;
    }

    .device-card .badge {
        font-size: 0.7rem;
        padding: 0.125rem 0.375rem;
    }

    .pagination {
        display: flex;
        justify-content: center;
        gap: 0.5rem;
        margin: 2rem 0;
    }

    .pagination a, .pagination span {
        padding: 0.5rem 1rem;
        border: 1px solid var(--gray-300);
        border-radius: 0.375rem;
        text-decoration: none;
        color: var(--gray-700);
    }

    .pagination a:hover {
        background: var(--gray-100);
    }

    .pagination .current {
        background: var(--primary);
        color: white;
        border-color: var(--primary);
    }

    .empty-state {
        text-align: center;
        padding: 3rem;
        color: var(--gray-500);
        background: white;
        border-radius: 0.5rem;
        border: 1px solid var(--gray-200);
    }

