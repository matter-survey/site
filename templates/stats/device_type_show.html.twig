{% from 'components/_star_rating.html.twig' import starsBadge %}

{% block body %}
    <div class="breadcrumb">
        <a href="{{ path('device_index') }}">Home</a>
        &rarr;
        <a href="{{ path('stats_device_types') }}">Device Types</a>
        &rarr;
        {{ deviceType.name }}
    </div>

    <div class="device-type-header">
        <div class="device-type-header-content">
            <div class="device-type-header-icon icon-{{ deviceType.icon }}"></div>
            <div class="device-type-header-info">
                <h1>
                    {{ deviceType.name }}
                    {% if deviceType.specVersion %}
                        <span class="spec-badge spec-{{ deviceType.specVersion|replace({'.': '-'}) }}">{{ deviceType.specVersion }}</span>
                    {% endif %}
                </h1>
                {% if deviceType.description %}
                    <div class="description">{{ deviceType.description }}</div>
                {% endif %}
                <div class="meta">
                    <span>Device Type ID: {{ deviceType.id }} ({{ deviceType.hexId|default('0x' ~ '%04X'|format(deviceType.id)) }})</span>
                    {% if deviceType.displayCategory %}
                        <span class="category-tag category-tag-{{ deviceType.displayCategory|lower|replace({' ': '-'}) }}">{{ deviceType.displayCategory }}</span>
                    {% endif %}
                    {% if deviceType.class %}
                        <span>Class: {{ deviceType.class }}</span>
                    {% endif %}
                    {% if deviceType.scope %}
                        <span>Scope: {{ deviceType.scope }}</span>
                    {% endif %}
                </div>
                {% if deviceType.superset %}
                    <div class="meta" style="margin-top: 0.5rem;">
                        <span>Extends: <strong>{{ deviceType.superset }}</strong></span>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="stats-row">
        <div class="stat-card">
            <div class="value">{{ totalDevices|number_format }}</div>
            <div class="label">Device{{ totalDevices != 1 ? 's' : '' }} Implementing</div>
        </div>
    </div>

    {% if mandatoryServerClusters|length > 0 or optionalServerClusters|length > 0 or mandatoryClientClusters|length > 0 or optionalClientClusters|length > 0 %}
        <h2 class="section-title">Cluster Requirements</h2>

        <div class="cluster-section">
            <div class="cluster-section-header">
                <h2>Server Clusters</h2>
                <span class="count">{{ mandatoryServerClusters|length + optionalServerClusters|length }} total</span>
            </div>
            {% if mandatoryServerClusters|length > 0 or optionalServerClusters|length > 0 %}
                <div class="cluster-grid">
                    <div class="cluster-card">
                        <h3>Mandatory <span class="mandatory-badge required">Required</span></h3>
                        {% if mandatoryServerClusters|length > 0 %}
                            <ul class="cluster-list">
                                {% for cluster in mandatoryServerClusters %}
                                    <li>
                                        <a href="{{ path('stats_cluster_show', {hexId: '0x%04X'|format(cluster.id)}) }}">
                                            <span class="cluster-name">{{ cluster.name }}</span>
                                            <span class="cluster-id">0x{{ '%04X'|format(cluster.id) }}</span>
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <p class="empty-clusters">None required</p>
                        {% endif %}
                    </div>
                    <div class="cluster-card">
                        <h3>Optional <span class="mandatory-badge optional">Optional</span></h3>
                        {% if optionalServerClusters|length > 0 %}
                            <ul class="cluster-list">
                                {% for cluster in optionalServerClusters %}
                                    <li>
                                        <a href="{{ path('stats_cluster_show', {hexId: '0x%04X'|format(cluster.id)}) }}">
                                            <span class="cluster-name">{{ cluster.name }}</span>
                                            <span class="cluster-id">0x{{ '%04X'|format(cluster.id) }}</span>
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <p class="empty-clusters">None specified</p>
                        {% endif %}
                    </div>
                </div>
            {% else %}
                <div class="empty-clusters">No server clusters specified for this device type.</div>
            {% endif %}
        </div>

        <div class="cluster-section">
            <div class="cluster-section-header">
                <h2>Client Clusters</h2>
                <span class="count">{{ mandatoryClientClusters|length + optionalClientClusters|length }} total</span>
            </div>
            {% if mandatoryClientClusters|length > 0 or optionalClientClusters|length > 0 %}
                <div class="cluster-grid">
                    <div class="cluster-card">
                        <h3>Mandatory <span class="mandatory-badge required">Required</span></h3>
                        {% if mandatoryClientClusters|length > 0 %}
                            <ul class="cluster-list">
                                {% for cluster in mandatoryClientClusters %}
                                    <li>
                                        <a href="{{ path('stats_cluster_show', {hexId: '0x%04X'|format(cluster.id)}) }}">
                                            <span class="cluster-name">{{ cluster.name }}</span>
                                            <span class="cluster-id">0x{{ '%04X'|format(cluster.id) }}</span>
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <p class="empty-clusters">None required</p>
                        {% endif %}
                    </div>
                    <div class="cluster-card">
                        <h3>Optional <span class="mandatory-badge optional">Optional</span></h3>
                        {% if optionalClientClusters|length > 0 %}
                            <ul class="cluster-list">
                                {% for cluster in optionalClientClusters %}
                                    <li>
                                        <a href="{{ path('stats_cluster_show', {hexId: '0x%04X'|format(cluster.id)}) }}">
                                            <span class="cluster-name">{{ cluster.name }}</span>
                                            <span class="cluster-id">0x{{ '%04X'|format(cluster.id) }}</span>
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <p class="empty-clusters">None specified</p>
                        {% endif %}
                    </div>
                </div>
            {% else %}
                <div class="empty-clusters">No client clusters specified for this device type.</div>
            {% endif %}
        </div>
    {% endif %}

    <div class="section-header-with-controls">
        <h2 class="section-title">Devices Implementing This Type</h2>
        {% if devices is not empty %}
            <div class="sort-controls">
                <span class="sort-label">Sort by:</span>
                <a href="{{ path('stats_device_type_show', {type: deviceType.id, sort: 'rating'}) }}" class="sort-option{% if currentSort == 'rating' %} active{% endif %}">Rating</a>
                <a href="{{ path('stats_device_type_show', {type: deviceType.id, sort: 'name'}) }}" class="sort-option{% if currentSort == 'name' %} active{% endif %}">Name</a>
                <a href="{{ path('stats_device_type_show', {type: deviceType.id, sort: 'recent'}) }}" class="sort-option{% if currentSort == 'recent' %} active{% endif %}">Recent</a>
            </div>
        {% endif %}
    </div>

    {% if devices is empty %}
        <div class="empty-state">
            <p>No devices implementing this device type in the database yet.</p>
            <p style="font-size: 0.875rem; margin-top: 0.5rem;">Contribute by running the survey on your Matter devices!</p>
        </div>
    {% else %}
        <div class="device-grid">
            {% for device in devices %}
                {% set score = deviceScores[device.id] ?? null %}
                <div class="device-card">
                    <a href="{{ path('device_show', {slug: device.slug}) }}">
                        <div class="device-card-header">
                            <h3>{{ device.product_name ?? 'Unknown Product' }}</h3>
                            {% if score %}
                                {{ starsBadge(score.star_rating, score.overall_score, score.is_compliant) }}
                            {% endif %}
                        </div>
                        <div class="vendor">{{ device.vendor_name ?? 'Unknown Vendor' }}</div>
                        <div class="device-meta">
                            <span>Vendor: {{ device.vendor_id }}</span>
                            <span>Product: {{ device.product_id }}</span>
                            {% if device.supports_binding %}
                                <span class="badge badge-binding">Binding</span>
                            {% endif %}
                            <span>{{ device.endpoint_count }} endpoint{{ device.endpoint_count != 1 ? 's' : '' }}</span>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>

        {% if totalPages > 1 %}
            <div class="pagination">
                {% if currentPage > 1 %}
                    <a href="{{ path('stats_device_type_show', {type: deviceType.id, page: currentPage - 1, sort: currentSort}) }}">&laquo; Prev</a>
                {% endif %}

                {% for i in max(1, currentPage - 2)..min(totalPages, currentPage + 2) %}
                    {% if i == currentPage %}
                        <span class="current">{{ i }}</span>
                    {% else %}
                        <a href="{{ path('stats_device_type_show', {type: deviceType.id, page: i, sort: currentSort}) }}">{{ i }}</a>
                    {% endif %}
                {% endfor %}

                {% if currentPage < totalPages %}
                    <a href="{{ path('stats_device_type_show', {type: deviceType.id, page: currentPage + 1, sort: currentSort}) }}">Next &raquo;</a>
                {% endif %}
            </div>
        {% endif %}
    {% endif %}
{% endblock %}
