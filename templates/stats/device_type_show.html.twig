{% block body %}
    <div class="breadcrumb">
        <a href="{{ path('device_index') }}">Home</a>
        &rarr;
        <a href="{{ path('stats_device_types') }}">Device Types</a>
        &rarr;
        {{ deviceType.name }}
    </div>

    <div class="device-type-header">
        <div class="device-type-header-content">
            <div class="device-type-header-icon icon-{{ deviceType.icon }}"></div>
            <div class="device-type-header-info">
                <h1>
                    {{ deviceType.name }}
                    {% if deviceType.specVersion %}
                        <span class="spec-badge spec-{{ deviceType.specVersion|replace({'.': '-'}) }}">{{ deviceType.specVersion }}</span>
                    {% endif %}
                </h1>
                {% if deviceType.description %}
                    <div class="description">{{ deviceType.description }}</div>
                {% endif %}
                <div class="meta">
                    <span>Device Type ID: {{ deviceType.id }} (0x{{ '%04X'|format(deviceType.id) }})</span>
                    {% if deviceType.displayCategory %}
                        <span class="category-tag category-tag-{{ deviceType.displayCategory|lower|replace({' ': '-'}) }}">{{ deviceType.displayCategory }}</span>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div class="stats-row">
        <div class="stat-card">
            <div class="value">{{ totalDevices|number_format }}</div>
            <div class="label">Device{{ totalDevices != 1 ? 's' : '' }} Implementing</div>
        </div>
    </div>

    {% if devices is empty %}
        <div class="empty-state">
            <p>No devices implementing this device type in the database yet.</p>
            <p style="font-size: 0.875rem; margin-top: 0.5rem;">Contribute by running the survey on your Matter devices!</p>
        </div>
    {% else %}
        <div class="device-grid">
            {% for device in devices %}
                <div class="device-card">
                    <a href="{{ path('device_show', {id: device.id}) }}">
                        <h3>{{ device.product_name ?? 'Unknown Product' }}</h3>
                        <div class="vendor">{{ device.vendor_name ?? 'Unknown Vendor' }}</div>
                        <div class="device-meta">
                            <span>Vendor: {{ device.vendor_id }}</span>
                            <span>Product: {{ device.product_id }}</span>
                            {% if device.supports_binding %}
                                <span class="badge badge-binding">Binding</span>
                            {% endif %}
                            <span>{{ device.endpoint_count }} endpoint{{ device.endpoint_count != 1 ? 's' : '' }}</span>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>

        {% if totalPages > 1 %}
            <div class="pagination">
                {% if currentPage > 1 %}
                    <a href="{{ path('stats_device_type_show', {type: deviceType.id, page: currentPage - 1}) }}">&laquo; Prev</a>
                {% endif %}

                {% for i in max(1, currentPage - 2)..min(totalPages, currentPage + 2) %}
                    {% if i == currentPage %}
                        <span class="current">{{ i }}</span>
                    {% else %}
                        <a href="{{ path('stats_device_type_show', {type: deviceType.id, page: i}) }}">{{ i }}</a>
                    {% endif %}
                {% endfor %}

                {% if currentPage < totalPages %}
                    <a href="{{ path('stats_device_type_show', {type: deviceType.id, page: currentPage + 1}) }}">Next &raquo;</a>
                {% endif %}
            </div>
        {% endif %}
    {% endif %}
{% endblock %}
