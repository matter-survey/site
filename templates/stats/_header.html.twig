{# Stats page header - pass title, subtitle, and color (optional) #}
{% set colors = {
    'blue': 'linear-gradient(135deg, #1e40af 0%, #3b82f6 100%)',
    'green': 'linear-gradient(135deg, #059669 0%, #10b981 100%)',
    'purple': 'linear-gradient(135deg, #7c3aed 0%, #a78bfa 100%)',
    'teal': 'linear-gradient(135deg, #0d9488 0%, #14b8a6 100%)',
    'orange': 'linear-gradient(135deg, #c2410c 0%, #f97316 100%)',
    'indigo': 'linear-gradient(135deg, #4338ca 0%, #6366f1 100%)',
    'pink': 'linear-gradient(135deg, #be185d 0%, #ec4899 100%)',
    'cyan': 'linear-gradient(135deg, #0891b2 0%, #06b6d4 100%)',
} %}

<div class="page-header" style="background: {{ colors[color]|default(colors['blue']) }}; color: white; padding: 2rem; border-radius: 0.5rem; margin-bottom: 1.5rem;">
    <h1 style="font-size: 1.75rem; margin-bottom: 0.5rem;">{{ title }}</h1>
    <p style="opacity: 0.9; margin: 0;">{{ subtitle }}</p>
</div>
