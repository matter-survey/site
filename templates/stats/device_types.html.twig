{% block body %}
    {{ include('stats/_nav.html.twig', { active: 'stats_device_types' }) }}

    <div class="info-box" style="background: var(--blue-100); border-radius: 0.5rem; padding: 1rem 1.25rem; margin-bottom: 2rem; font-size: 0.875rem; color: var(--blue-700);">
        <strong>What are device types?</strong>
        Device types are categories defined by the Matter specification. Each type (like "Dimmable Light" or "Door Lock") specifies which features a device must support. This page shows which device types we've seen in the wild vs. what the spec defines.
        <a href="{{ path('page_glossary') }}#device-type" style="color: inherit; text-decoration: underline;">Learn more</a>
    </div>

    {% set totalDeviceTypes = 0 %}
    {% for category, types in groupedDeviceTypes %}
        {% set totalDeviceTypes = totalDeviceTypes + types|length %}
    {% endfor %}
    {% set totalSpecTypes = totalDeviceTypes + missingDeviceTypes|length %}
    {% set coveragePercent = totalSpecTypes > 0 ? ((totalDeviceTypes / totalSpecTypes) * 100)|round : 0 %}

    <div class="stats-row">
        <div class="stat-card">
            <div class="value">{{ totalDeviceTypes }}</div>
            <div class="label">Device Types Seen</div>
        </div>
        <div class="stat-card">
            <div class="value">{{ missingDeviceTypes|length }}</div>
            <div class="label">Not Yet Seen</div>
        </div>
        <div class="stat-card">
            <div class="value">{{ stats.total_devices|number_format }}</div>
            <div class="label">Total Devices</div>
        </div>
        <div class="stat-card" style="display: flex; align-items: center; gap: 1rem;">
            <div>
                <div class="value">{{ coveragePercent }}%</div>
                <div class="label">Spec Coverage</div>
            </div>
            <div class="progress-bar-container">
                <div class="progress-bar-fill" style="width: {{ coveragePercent }}%;"></div>
            </div>
        </div>
    </div>

    {# Spec Version Filter #}
    <div class="filter-bar">
        <span class="filter-label">Filter by Spec:</span>
        <button class="filter-btn active" data-filter="all">All</button>
        {% for version in specVersions %}
            <button class="filter-btn" data-filter="{{ version }}">{{ version }}</button>
        {% endfor %}
    </div>

    {% for category in displayCategories %}
        {% if groupedDeviceTypes[category]|length > 0 %}
            <div class="category-section category-{{ category|lower|replace({' ': '-'}) }}" data-category="{{ category }}">
                <div class="category-header">
                    <span class="category-dot"></span>
                    <h2>{{ category }}</h2>
                    <span style="font-size: 0.75rem; color: var(--gray-500);">{{ groupedDeviceTypes[category]|length }} types</span>
                </div>
                <div class="device-type-grid">
                    {% for dt in groupedDeviceTypes[category] %}
                        <a href="{{ path('stats_device_type_show', {type: dt.id}) }}" class="device-type-card" data-spec="{{ dt.specVersion }}">
                            <div class="device-type-icon icon-{{ dt.icon }}"></div>
                            <div class="device-type-info">
                                <div class="device-type-name">
                                    {{ dt.name }}
                                    {% if dt.specVersion %}
                                        <span class="spec-badge spec-{{ dt.specVersion|replace({'.': '-'}) }}">{{ dt.specVersion }}</span>
                                    {% endif %}
                                </div>
                                <div class="device-type-meta">ID: {{ dt.id }}</div>
                            </div>
                            <div class="device-type-count">{{ dt.count }}</div>
                        </a>
                    {% endfor %}
                </div>
            </div>
        {% endif %}
    {% endfor %}

    {% if missingDeviceTypes|length > 0 %}
        <div class="section-divider">Not Yet Seen in Survey</div>
        <p style="text-align: center; font-size: 0.875rem; color: var(--gray-500); margin-bottom: 1.5rem;">
            Device types defined in the Matter specification but not yet reported by contributors
        </p>

        {% for category in displayCategories %}
            {% if groupedMissingDeviceTypes[category]|length > 0 %}
                <div class="category-section category-{{ category|lower|replace({' ': '-'}) }} unseen-category" data-category="{{ category }}">
                    <div class="category-header">
                        <span class="category-dot"></span>
                        <h2>{{ category }}</h2>
                        <span style="font-size: 0.75rem; color: var(--gray-500);">{{ groupedMissingDeviceTypes[category]|length }} types not yet seen</span>
                    </div>
                    <div class="device-type-grid">
                        {% for dt in groupedMissingDeviceTypes[category] %}
                            <a href="{{ path('stats_device_type_show', {type: dt.id}) }}" class="device-type-card" data-spec="{{ dt.specVersion }}">
                                <div class="device-type-icon icon-{{ dt.icon }}"></div>
                                <div class="device-type-info">
                                    <div class="device-type-name">
                                        {{ dt.name }}
                                        {% if dt.specVersion %}
                                            <span class="spec-badge spec-{{ dt.specVersion|replace({'.': '-'}) }}">{{ dt.specVersion }}</span>
                                        {% endif %}
                                    </div>
                                    <div class="device-type-meta">ID: {{ dt.id }}</div>
                                </div>
                                <div class="device-type-count">â€”</div>
                            </a>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    {% endif %}

    <script>
        document.querySelectorAll('.filter-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                const filter = btn.dataset.filter;

                document.querySelectorAll('.device-type-card').forEach(card => {
                    if (filter === 'all' || card.dataset.spec === filter) {
                        card.style.display = '';
                    } else {
                        card.style.display = 'none';
                    }
                });

                // Hide empty categories
                document.querySelectorAll('.category-section').forEach(section => {
                    const visibleCards = section.querySelectorAll('.device-type-card:not([style*="display: none"])');
                    section.style.display = visibleCards.length > 0 ? '' : 'none';
                });
            });
        });
    </script>
{% endblock %}
