{% extends 'base.html.twig' %}

{% block title %}Matter Survey - Device Types{% endblock %}

{% block header_subtitle %}<p>Matter device types seen in the wild</p>{% endblock %}

{% block extra_styles %}
    .dashboard-nav {
        display: flex;
        gap: 0.5rem;
        margin-bottom: 2rem;
        flex-wrap: wrap;
    }

    .dashboard-nav a {
        padding: 0.5rem 1rem;
        background: white;
        border: 1px solid var(--gray-200);
        border-radius: 0.375rem;
        text-decoration: none;
        color: var(--gray-700);
        font-size: 0.875rem;
    }

    .dashboard-nav a:hover {
        background: var(--gray-100);
    }

    .dashboard-nav a.active {
        background: var(--primary);
        color: white;
        border-color: var(--primary);
    }

    .stats-row {
        display: flex;
        gap: 1rem;
        margin-bottom: 2rem;
        flex-wrap: wrap;
    }

    .stat-card {
        background: white;
        padding: 1rem 1.5rem;
        border-radius: 0.5rem;
        border: 1px solid var(--gray-200);
    }

    .stat-card .value {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--primary);
    }

    .stat-card .label {
        font-size: 0.75rem;
        color: var(--gray-500);
    }

    .category-section {
        background: white;
        border-radius: 0.5rem;
        border: 1px solid var(--gray-200);
        margin-bottom: 1.5rem;
    }

    .category-header {
        padding: 1rem 1.25rem;
        border-bottom: 1px solid var(--gray-200);
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .category-header h2 {
        font-size: 1rem;
        font-weight: 600;
        margin: 0;
    }

    .category-dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
    }

    .category-lights .category-dot { background: #fbbf24; }
    .category-climate .category-dot { background: #3b82f6; }
    .category-sensors .category-dot { background: #10b981; }
    .category-security .category-dot { background: #ef4444; }
    .category-appliances .category-dot { background: #8b5cf6; }
    .category-entertainment .category-dot { background: #ec4899; }
    .category-energy .category-dot { background: #f97316; }
    .category-system .category-dot { background: #6b7280; }

    .device-type-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 1rem;
        padding: 1.25rem;
    }

    .device-type-card {
        padding: 1rem;
        background: var(--gray-50);
        border-radius: 0.5rem;
        display: flex;
        gap: 0.75rem;
        text-decoration: none;
        color: inherit;
        transition: background 0.15s;
    }

    .device-type-card:hover {
        background: var(--gray-100);
    }

    .device-type-icon {
        width: 40px;
        height: 40px;
        background: white;
        border-radius: 0.375rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        flex-shrink: 0;
    }

    .device-type-info {
        flex: 1;
        min-width: 0;
    }

    .device-type-name {
        font-weight: 600;
        font-size: 0.875rem;
        margin-bottom: 0.25rem;
    }

    .device-type-meta {
        font-size: 0.75rem;
        color: var(--gray-500);
    }

    .device-type-count {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--primary);
    }

    .spec-badge {
        display: inline-block;
        padding: 0.125rem 0.375rem;
        border-radius: 9999px;
        font-size: 0.625rem;
        font-weight: 500;
        margin-left: 0.25rem;
    }

    .spec-1-0 { background: #dbeafe; color: #1d4ed8; }
    .spec-1-2 { background: #dcfce7; color: #15803d; }
    .spec-1-3 { background: #fef3c7; color: #b45309; }
    .spec-1-4 { background: #fce7f3; color: #be185d; }

    .missing-section {
        background: white;
        border-radius: 0.5rem;
        border: 1px solid var(--gray-200);
        margin-bottom: 1.5rem;
    }

    .missing-header {
        padding: 1rem 1.25rem;
        border-bottom: 1px solid var(--gray-200);
    }

    .missing-header h2 {
        font-size: 1rem;
        font-weight: 600;
        margin: 0;
    }

    .missing-header p {
        font-size: 0.75rem;
        color: var(--gray-500);
        margin: 0.25rem 0 0;
    }

    .missing-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 0.75rem;
        padding: 1.25rem;
    }

    .missing-item {
        padding: 0.75rem;
        background: var(--gray-50);
        border-radius: 0.375rem;
        font-size: 0.875rem;
        text-decoration: none;
        color: inherit;
        display: block;
        transition: background 0.15s;
    }

    .missing-item:hover {
        background: var(--gray-100);
    }

    .missing-item .name {
        font-weight: 500;
        color: var(--gray-700);
    }

    .missing-item .meta {
        font-size: 0.7rem;
        color: var(--gray-400);
        margin-top: 0.25rem;
    }

    .filter-bar {
        display: flex;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
        flex-wrap: wrap;
        align-items: center;
    }

    .filter-label {
        font-size: 0.75rem;
        color: var(--gray-500);
        text-transform: uppercase;
        font-weight: 600;
    }

    .filter-btn {
        padding: 0.375rem 0.75rem;
        background: white;
        border: 1px solid var(--gray-200);
        border-radius: 0.375rem;
        font-size: 0.8125rem;
        cursor: pointer;
        transition: all 0.15s;
        text-decoration: none;
        color: var(--gray-600);
    }

    .filter-btn:hover {
        background: var(--gray-50);
        border-color: var(--gray-300);
    }

    .filter-btn.active {
        background: var(--primary);
        color: white;
        border-color: var(--primary);
    }

    .unseen-category {
        opacity: 0.75;
    }

    .unseen-category .category-header {
        background: var(--gray-50);
    }

    .unseen-category .device-type-card {
        border: 1px dashed var(--gray-300);
        background: white;
    }

    .unseen-category .device-type-count {
        color: var(--gray-400);
        font-size: 0.875rem;
    }

    .section-divider {
        display: flex;
        align-items: center;
        gap: 1rem;
