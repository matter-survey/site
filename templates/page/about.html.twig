{% extends 'base.html.twig' %}

{% block title %}{{ 'title.about'|trans({}, 'messages') }}{% endblock %}

{% block og_title %}{{ 'about.title'|trans({}, 'messages') }}{% endblock %}
{% block og_description %}{{ 'about.intro'|trans({}, 'messages') }}{% endblock %}

{% block extra_styles %}
    .about-content {
        max-width: 800px;
        margin: 0 auto;
    }

    .about-content h1 {
        font-size: 2rem;
        margin-bottom: 1.5rem;
        color: var(--gray-900);
    }

    .about-content h2 {
        font-size: 1.5rem;
        margin-top: 2.5rem;
        margin-bottom: 1rem;
        color: var(--gray-900);
    }

    .about-content p {
        margin-bottom: 1rem;
        color: var(--gray-700);
        line-height: 1.8;
    }

    .about-content ul {
        margin-bottom: 1.5rem;
        padding-left: 1.5rem;
    }

    .about-content li {
        margin-bottom: 0.5rem;
        color: var(--gray-700);
    }

    .highlight-box {
        background: var(--blue-100);
        border-left: 4px solid var(--primary);
        padding: 1rem 1.25rem;
        margin: 1.5rem 0;
        border-radius: 0 0.5rem 0.5rem 0;
    }

    .highlight-box p {
        margin: 0;
        color: var(--blue-700);
    }

    .brand-logos {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        align-items: center;
        margin: 1rem 0;
        font-size: 0.9rem;
        color: var(--gray-500);
    }

    .brand-logos span {
        background: var(--gray-100);
        padding: 0.375rem 0.75rem;
        border-radius: 0.25rem;
    }

    .cta-section {
        background: white;
        border: 1px solid var(--gray-200);
        border-radius: 0.5rem;
        padding: 1.5rem;
        margin-top: 2rem;
        text-align: center;
    }

    .cta-section h3 {
        margin-bottom: 0.75rem;
    }

    .cta-section a {
        display: inline-block;
        background: var(--primary);
        color: white;
        padding: 0.5rem 1.25rem;
        border-radius: 0.375rem;
        text-decoration: none;
        margin: 0.5rem 0.25rem;
    }

    .cta-section a:hover {
        background: var(--primary-dark);
    }

    .cta-section a.secondary {
        background: white;
        color: var(--primary);
        border: 1px solid var(--primary);
    }
{% endblock %}

{% block body %}
<div class="about-content">
    <h1>{{ 'about.title'|trans({}, 'messages') }}</h1>

    <p>{{ 'about.intro'|trans({}, 'messages') }}</p>

    <h2>{{ 'about.what_is_matter'|trans({}, 'messages') }}</h2>

    <p>{{ 'about.what_is_matter_text_1'|trans({}, 'messages') }}</p>

    <p>{{ 'about.what_is_matter_text_2'|trans({}, 'messages') }}</p>

    <div class="brand-logos">
        <span>Apple</span>
        <span>Google</span>
        <span>Amazon</span>
        <span>Samsung</span>
        <span>IKEA</span>
        <span>{{ 'about.and_others'|trans({}, 'messages') }}</span>
    </div>

    <div class="highlight-box">
        <p>
            <strong>{{ 'about.plain_english'|trans({}, 'messages') }}</strong> {{ 'about.plain_english_text'|trans({}, 'messages') }}
        </p>
    </div>

    <h2>{{ 'about.why_exists'|trans({}, 'messages') }}</h2>

    <p>{{ 'about.why_exists_intro'|trans({}, 'messages') }}</p>

    <ul>
        <li><strong>{{ 'about.reason_1'|trans({}, 'messages') }}</strong> {{ 'about.reason_1_detail'|trans({}, 'messages') }}</li>
        <li><strong>{{ 'about.reason_2'|trans({}, 'messages') }}</strong> {{ 'about.reason_2_detail'|trans({}, 'messages') }}</li>
        <li><strong>{{ 'about.reason_3'|trans({}, 'messages') }}</strong> {{ 'about.reason_3_detail'|trans({}, 'messages') }}</li>
        <li><strong>{{ 'about.reason_4'|trans({}, 'messages') }}</strong> {{ 'about.reason_4_detail'|trans({}, 'messages') }}</li>
    </ul>

    <p>{{ 'about.reality_text'|trans({}, 'messages') }}</p>

    <h2>{{ 'about.what_data'|trans({}, 'messages') }}</h2>

    <p>{{ 'about.what_data_intro'|trans({}, 'messages') }}</p>

    <ul>
        <li>{{ 'about.data_1'|trans({}, 'messages') }}</li>
        <li>{{ 'about.data_2'|trans({}, 'messages') }}</li>
        <li>{{ 'about.data_3'|trans({}, 'messages') }}</li>
        <li>{{ 'about.data_4'|trans({}, 'messages') }}</li>
    </ul>

    <p>
        <strong>{{ 'about.no_collect'|trans({}, 'messages') }}</strong> {{ 'about.no_collect_text'|trans({}, 'messages') }}
    </p>

    <h2>{{ 'about.how_collected'|trans({}, 'messages') }}</h2>

    <p>{{ 'about.how_collected_text'|trans({}, 'messages') }}</p>

    <div class="cta-section">
        <h3>{{ 'about.ready_explore'|trans({}, 'messages') }}</h3>
        <a href="{{ path('device_index') }}">{{ 'about.browse_devices'|trans({}, 'messages') }}</a>
        <a href="{{ path('page_faq') }}" class="secondary">{{ 'about.read_faq'|trans({}, 'messages') }}</a>
    </div>
</div>
{% endblock %}
