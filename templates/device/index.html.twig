{% extends 'base.html.twig' %}

{% block title %}Matter Survey - Device Index{% endblock %}

{% block og_title %}Matter Survey - Smart Home Device Database{% endblock %}
{% block og_description %}Community-driven database of {{ stats.total_devices|number_format }} Matter smart home devices. Search and explore device capabilities, clusters, and binding support from {{ stats.total_installations|number_format }} contributors.{% endblock %}

{% block structured_data %}
<script type="application/ld+json">
{
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": "Matter Survey",
    "description": "Community-driven database of Matter smart home device capabilities",
    "url": "{{ url('device_index') }}",
    "potentialAction": {
        "@type": "SearchAction",
        "target": {
            "@type": "EntryPoint",
            "urlTemplate": "{{ url('device_index') }}?q={search_term_string}"
        },
        "query-input": "required name=search_term_string"
    }
}
</script>
<script type="application/ld+json">
{
    "@context": "https://schema.org",
    "@type": "CollectionPage",
    "name": "Matter Devices",
    "description": "Browse all Matter-compatible smart home devices",
    "url": "{{ url('device_index') }}",
    "numberOfItems": {{ stats.total_devices }},
    "isPartOf": {
        "@type": "WebSite",
        "name": "Matter Survey"
    }
}
</script>
{% endblock %}

{% block extra_styles %}
    .stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
        gap: 0.75rem;
        margin-bottom: 1.5rem;
    }

    .stat-card {
        background: white;
        padding: 0.875rem;
        border-radius: 0.5rem;
        border: 1px solid var(--gray-200);
    }

    .stat-card .value {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--primary);
    }

    .stat-card .label {
        font-size: 0.8125rem;
        color: var(--gray-500);
    }

    /* Main layout */
    .page-layout {
        display: flex;
        gap: 1.5rem;
        align-items: flex-start;
    }

    /* Filter sidebar */
    .filter-sidebar {
        width: 260px;
        flex-shrink: 0;
        background: white;
        border-radius: 0.5rem;
        border: 1px solid var(--gray-200);
    }

    .filter-header {
        padding: 1rem;
        border-bottom: 1px solid var(--gray-200);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .filter-header h3 {
        font-size: 1rem;
        font-weight: 600;
        margin: 0;
    }

    .filter-clear {
        font-size: 0.75rem;
        color: var(--primary);
        text-decoration: none;
    }

    .filter-clear:hover {
        text-decoration: underline;
    }

    .filter-section {
        padding: 1rem;
        border-bottom: 1px solid var(--gray-100);
    }

    .filter-section:last-child {
        border-bottom: none;
    }

    .filter-section h4 {
        font-size: 0.8125rem;
        font-weight: 600;
        color: var(--gray-600);
        text-transform: uppercase;
        letter-spacing: 0.025em;
        margin: 0 0 0.75rem 0;
    }

    .filter-option {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.375rem 0;
        cursor: pointer;
        font-size: 0.875rem;
    }

    .filter-option input[type="checkbox"],
    .filter-option input[type="radio"] {
        width: 1rem;
        height: 1rem;
        cursor: pointer;
    }

    .filter-option .count {
        margin-left: auto;
        color: var(--gray-400);
        font-size: 0.75rem;
    }

    .filter-option.active {
        font-weight: 500;
        color: var(--primary);
    }

    .vendor-list {
        max-height: 200px;
        overflow-y: auto;
    }

    /* Main content */
    .main-content {
        flex: 1;
        min-width: 0;
    }

    .search-box {
        margin-bottom: 1rem;
    }

    .search-box form {
        display: flex;
        gap: 0.5rem;
    }

    .search-box input[type="text"] {
        flex: 1;
        padding: 0.5rem 1rem;
        border: 1px solid var(--gray-300);
        border-radius: 0.375rem;
        font-size: 1rem;
    }

    .search-box button {
        padding: 0.5rem 1rem;
        background: var(--primary);
        color: white;
        border: none;
        border-radius: 0.375rem;
        cursor: pointer;
        font-size: 1rem;
    }

    .search-box button:hover {
        background: var(--primary-dark);
    }

    .results-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .results-count {
        font-size: 0.875rem;
        color: var(--gray-600);
    }

    .active-filters {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .active-filter {
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
        padding: 0.25rem 0.5rem;
        background: var(--blue-100);
        color: var(--blue-700);
        border-radius: 9999px;
        font-size: 0.75rem;
    }

    .active-filter a {
        color: inherit;
        text-decoration: none;
        opacity: 0.7;
    }

    .active-filter a:hover {
        opacity: 1;
    }

    .device-list {
        background: white;
        border-radius: 0.5rem;
        border: 1px solid var(--gray-200);
        overflow: hidden;
    }

    .device-item {
        padding: 1rem;
        border-bottom: 1px solid var(--gray-200);
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 1rem;
    }

    .device-item:last-child {
        border-bottom: none;
    }

    .device-item:hover {
        background: var(--gray-50);
    }

    .device-info {
        min-width: 0;
        flex: 1;
    }

    .device-info h3 {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 0.25rem;
    }

    .device-info h3 a {
        color: var(--gray-900);
        text-decoration: none;
    }

    .device-info h3 a:hover {
        color: var(--primary);
    }

    .device-meta {
        font-size: 0.8125rem;
        color: var(--gray-500);
        line-height: 1.4;
    }

    .device-badges {
        display: flex;
        gap: 0.375rem;
        flex-wrap: wrap;
        flex-shrink: 0;
    }

    .pagination {
        display: flex;
        justify-content: center;
        gap: 0.5rem;
        margin: 1.5rem 0;
        flex-wrap: wrap;
    }

    .pagination a, .pagination span {
        padding: 0.5rem 0.875rem;
        border: 1px solid var(--gray-300);
        border-radius: 0.375rem;
        text-decoration: none;
        color: var(--gray-700);
        font-size: 0.875rem;
    }

    .pagination a:hover {
        background: var(--gray-100);
    }

    .pagination .current {
        background: var(--primary);
        color: white;
        border-color: var(--primary);
    }

    .empty-state {
        text-align: center;
        padding: 3rem;
        color: var(--gray-500);
        background: white;
        border-radius: 0.5rem;
        border: 1px solid var(--gray-200);
    }

    /* Mobile filter toggle */
    .filter-toggle {
        display: none;
        width: 100%;
        padding: 0.75rem 1rem;
        background: white;
        border: 1px solid var(--gray-200);
        border-radius: 0.5rem;
        font-size: 0.875rem;
        font-weight: 500;
        cursor: pointer;
        margin-bottom: 1rem;
        align-items: center;
        justify-content: space-between;
    }

    .filter-toggle-icon {
        transition: transform 0.2s;
    }

    .filter-toggle[aria-expanded="true"] .filter-toggle-icon {
        transform: rotate(180deg);
    }

    /* Responsive styles */
    @media (max-width: 768px) {
        .page-layout {
            flex-direction: column;
        }

        .filter-sidebar {
            width: 100%;
            position: static;
            display: none;
        }

        .filter-sidebar.open {
            display: block;
        }

        .filter-toggle {
            display: flex;
        }

        .stats {
            grid-template-columns: repeat(2, 1fr);
        }

        .device-item {
            flex-direction: column;
            align-items: flex-start;
        }

        .device-badges {
            margin-top: 0.5rem;
        }

        .device-meta {
            font-size: 0.75rem;
        }
    }

    @media (max-width: 480px) {
        .stats {
            grid-template-columns: 1fr 1fr;
            gap: 0.5rem;
        }

        .stat-card {
            padding: 0.75rem;
        }

        .stat-card .value {
            font-size: 1.125rem;
        }
    }
{% endblock %}

{% block body %}
    <div class="stats">
        <div class="stat-card">
            <div class="value">{{ stats.total_devices|number_format }}</div>
            <div class="label">Known Devices</div>
        </div>
        <div class="stat-card">
            <div class="value">{{ stats.bindable_devices|number_format }}</div>
            <div class="label">Support Binding</div>
        </div>
        <div class="stat-card">
            <div class="value">{{ stats.total_installations|number_format }}</div>
            <div class="label">Contributors</div>
        </div>
        <div class="stat-card">
            <div class="value">{{ stats.total_submissions|number_format }}</div>
            <div class="label">Submissions</div>
        </div>
    </div>

    {# Mobile filter toggle #}
    <button class="filter-toggle" onclick="toggleFilters()" aria-expanded="false" aria-controls="filter-sidebar">
        <span>
            Filters
            {% if hasFilters %}
                <span style="color: var(--primary);">(active)</span>
            {% endif %}
        </span>
        <span class="filter-toggle-icon">▼</span>
    </button>

    <div class="page-layout">
        {# Filter Sidebar #}
        <aside class="filter-sidebar" id="filter-sidebar">
            <div class="filter-header">
                <h3>Filters</h3>
                {% if hasFilters %}
                    <a href="{{ path('device_index') }}" class="filter-clear">Clear all</a>
                {% endif %}
            </div>

            <form method="get" action="{{ path('device_index') }}" id="filter-form" data-turbo-frame="device-results">
                {# Search within filters #}
                <div class="filter-section">
                    <h4>Search</h4>
                    <input type="text" name="q" value="{{ filters.search ?? '' }}" placeholder="Search devices..." style="width: 100%; padding: 0.5rem; border: 1px solid var(--gray-300); border-radius: 0.375rem; font-size: 0.875rem;">
                </div>

                {# Connectivity filter #}
                <div class="filter-section">
                    <h4>Connectivity</h4>
                    {% for type, count in facets.connectivity %}
                        {% if count > 0 %}
                            <label class="filter-option {{ type in (filters.connectivity ?? []) ? 'active' : '' }}">
                                <input type="checkbox" name="connectivity[]" value="{{ type }}" {{ type in (filters.connectivity ?? []) ? 'checked' : '' }} onchange="this.form.submit()">
                                <span>{{ type|capitalize }}</span>
                                <span class="count">{{ count }}</span>
                            </label>
                        {% endif %}
                    {% endfor %}
                </div>

                {# Binding filter #}
                <div class="filter-section">
                    <h4>Binding Support</h4>
                    <label class="filter-option {{ (filters.binding ?? null) is same as(true) ? 'active' : '' }}">
                        <input type="radio" name="binding" value="1" {{ (filters.binding ?? null) is same as(true) ? 'checked' : '' }} onchange="this.form.submit()">
                        <span>Supports Binding</span>
                        <span class="count">{{ facets.binding.with_binding }}</span>
                    </label>
                    <label class="filter-option {{ (filters.binding ?? null) is same as(false) ? 'active' : '' }}">
                        <input type="radio" name="binding" value="0" {{ (filters.binding ?? null) is same as(false) ? 'checked' : '' }} onchange="this.form.submit()">
                        <span>No Binding</span>
                        <span class="count">{{ facets.binding.without_binding }}</span>
                    </label>
                    {% if filters.binding is defined %}
                        <label class="filter-option">
                            <input type="radio" name="binding" value="" onchange="this.form.submit()">
                            <span style="color: var(--gray-500);">Any</span>
                        </label>
                    {% endif %}
                </div>

                {# Device type filter #}
                <div class="filter-section">
                    <h4>Device Type</h4>
                    <div class="vendor-list">
                        {% for dt in facets.device_types %}
                            <label class="filter-option {{ dt.id in (filters.device_types ?? []) ? 'active' : '' }}">
                                <input type="checkbox" name="device_types[]" value="{{ dt.id }}" {{ dt.id in (filters.device_types ?? []) ? 'checked' : '' }} onchange="this.form.submit()">
                                <span>{{ dt.name }}</span>
                                <span class="count">{{ dt.count }}</span>
                            </label>
                        {% endfor %}
                    </div>
                </div>

                {# Vendor filter #}
                <div class="filter-section">
                    <h4>Vendor</h4>
                    <div class="vendor-list">
                        <label class="filter-option {{ filters.vendor is not defined ? 'active' : '' }}">
                            <input type="radio" name="vendor" value="" {{ filters.vendor is not defined ? 'checked' : '' }} onchange="this.form.submit()">
                            <span>All Vendors</span>
                        </label>
                        {% for vendor in facets.vendors %}
                            <label class="filter-option {{ (filters.vendor ?? 0) == vendor.id ? 'active' : '' }}">
                                <input type="radio" name="vendor" value="{{ vendor.id }}" {{ (filters.vendor ?? 0) == vendor.id ? 'checked' : '' }} onchange="this.form.submit()">
                                <span>{{ vendor.name }}</span>
                                <span class="count">{{ vendor.count }}</span>
                            </label>
                        {% endfor %}
                    </div>
                </div>

                <noscript>
                    <div class="filter-section">
                        <button type="submit" style="width: 100%; padding: 0.5rem; background: var(--primary); color: white; border: none; border-radius: 0.375rem; cursor: pointer;">Apply Filters</button>
                    </div>
                </noscript>
            </form>
        </aside>

        {# Main Content - Turbo Frame for instant filter updates #}
        <turbo-frame id="device-results" class="main-content" data-turbo-action="advance">
            <div class="results-header">
                <span class="results-count">
                    {{ totalDevices|number_format }} device{{ totalDevices != 1 ? 's' : '' }}
                    {% if hasFilters %}
                        (filtered)
                    {% endif %}
                </span>

                {% if hasFilters %}
                    <div class="active-filters">
                        {% if filters.search is defined %}
                            <span class="active-filter">
                                Search: "{{ filters.search }}"
                                <a href="{{ path('device_index', filters|filter((v, k) => k != 'search')) }}" title="Remove">&times;</a>
                            </span>
                        {% endif %}
                        {% for type in filters.connectivity ?? [] %}
                            <span class="active-filter">
                                {{ type|capitalize }}
                                <a href="{{ path('device_index', filters|merge({connectivity: filters.connectivity|filter(v => v != type)})) }}" title="Remove">&times;</a>
                            </span>
                        {% endfor %}
                        {% if filters.binding is defined %}
                            <span class="active-filter">
                                {{ filters.binding ? 'With' : 'Without' }} Binding
                                <a href="{{ path('device_index', filters|filter((v, k) => k != 'binding')) }}" title="Remove">&times;</a>
                            </span>
                        {% endif %}
                        {% if filters.vendor is defined %}
                            {% set vendorName = facets.vendors|filter(v => v.id == filters.vendor)|first %}
                            <span class="active-filter">
                                Vendor: {{ vendorName.name ?? 'Unknown' }}
                                <a href="{{ path('device_index', filters|filter((v, k) => k != 'vendor')) }}" title="Remove">&times;</a>
                            </span>
                        {% endif %}
                        {% if filters.device_types is defined and filters.device_types is not empty %}
                            {% for typeId in filters.device_types %}
                                {% set deviceTypeName = facets.device_types|filter(dt => dt.id == typeId)|first %}
                                {% set otherTypes = filters.device_types|filter(t => t != typeId) %}
                                {% set newFilters = filters|merge({device_types: otherTypes}) %}
                                {% if otherTypes is empty %}
                                    {% set newFilters = filters|filter((v, k) => k != 'device_types') %}
                                {% endif %}
                                <span class="active-filter">
                                    {{ deviceTypeName.name ?? 'Unknown' }}
                                    <a href="{{ path('device_index', newFilters) }}" title="Remove">&times;</a>
                                </span>
                            {% endfor %}
                        {% endif %}
                    </div>
                {% endif %}
            </div>

            {% if devices is empty %}
                <div class="empty-state">
                    {% if hasFilters %}
                        <p>No devices match your filters.</p>
                        <p><a href="{{ path('device_index') }}">Clear all filters</a></p>
                    {% else %}
                        <p>No devices in the database yet.</p>
                        <p>Install the Matter Binding Helper integration to contribute!</p>
                    {% endif %}
                </div>
            {% else %}
                <div class="device-list">
                    {% for device in devices %}
                        <div class="device-item">
                            <div class="device-info">
                                <h3>
                                    <a href="{{ path('device_show', {slug: device.slug}) }}">
                                        {{ device.product_name ?? 'Unknown Product' }}
                                    </a>
                                </h3>
                                <div class="device-meta">
                                    {% if device.vendor_slug %}
                                        <a href="{{ path('vendor_show', {slug: device.vendor_slug}) }}">{{ device.vendor_name ?? 'Unknown Vendor' }}</a>
                                    {% else %}
                                        {{ device.vendor_name ?? 'Unknown Vendor' }}
                                    {% endif %}
                                    &middot;
                                    VID: {{ device.vendor_id ?? 'N/A' }} / PID: {{ device.product_id ?? 'N/A' }}
                                    &middot;
                                    {{ device.submission_count|number_format }}×
                                </div>
                            </div>
                            <div class="device-badges">
                                {% if device.supports_binding %}
                                    <span class="badge badge-binding">Binding</span>
                                {% endif %}
                                {% if device.connectivity_types %}
                                    {% set connTypes = device.connectivity_types|json_decode %}
                                    {% if connTypes %}
                                        {% for connType in connTypes %}
                                            <span class="badge badge-{{ connType }}">{{ connType|capitalize }}</span>
                                        {% endfor %}
                                    {% endif %}
                                {% endif %}
                                <span class="badge badge-endpoints" title="Number of logical sub-devices (endpoints) this device exposes">{{ device.endpoint_count }} endpoint{{ device.endpoint_count != 1 ? 's' : '' }}</span>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                {% if totalPages > 1 %}
                    <div class="pagination">
                        {% if page > 1 %}
                            <a href="{{ path('device_index', filters|merge({page: page - 1})) }}">&laquo; Prev</a>
                        {% endif %}

                        {% for i in max(1, page - 2)..min(totalPages, page + 2) %}
                            {% if i == page %}
                                <span class="current">{{ i }}</span>
                            {% else %}
                                <a href="{{ path('device_index', filters|merge({page: i})) }}">{{ i }}</a>
                            {% endif %}
                        {% endfor %}

                        {% if page < totalPages %}
                            <a href="{{ path('device_index', filters|merge({page: page + 1})) }}">Next &raquo;</a>
                        {% endif %}
                    </div>
                {% endif %}
            {% endif %}
        </turbo-frame>
    </div>

    <script>
        function toggleFilters() {
            const sidebar = document.getElementById('filter-sidebar');
            const toggle = document.querySelector('.filter-toggle');
            const isOpen = sidebar.classList.toggle('open');
            toggle.setAttribute('aria-expanded', isOpen);
        }
    </script>
{% endblock %}
