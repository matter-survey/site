{% extends 'base.html.twig' %}

{# Macro for rendering cluster tag with tooltip showing attributes/commands #}
{% macro clusterTag(clusterId, matterRegistry, isClient) %}
    {% set meta = matterRegistry.getClusterMetadata(clusterId) %}
    {% set attrs = meta.attributes ?? [] %}
    {% set cmds = meta.commands ?? [] %}
    {% set desc = meta.description ?? '' %}
    <span class="cluster-tooltip">
        <a href="{{ path('stats_cluster_show', {hexId: '0x%04X'|format(clusterId)}) }}" class="tag {{ isClient ? 'tag-client' : '' }}">
            {{ meta.name ?? ('Cluster ' ~ clusterId) }}
        </a>
        {% if desc or attrs|length > 0 or cmds|length > 0 %}
            <span class="cluster-details">
                <h5>{{ meta.name ?? ('Cluster ' ~ clusterId) }}</h5>
                {% if desc %}
                    <p style="margin: 0 0 0.5rem; opacity: 0.9; font-size: 0.6875rem;">{{ desc|length > 150 ? desc|slice(0, 150) ~ '...' : desc }}</p>
                {% endif %}
                {% if attrs|length > 0 %}
                    <div class="cluster-details-section">
                        <div class="cluster-details-label">Attributes ({{ attrs|length }})</div>
                        <div class="cluster-details-list">
                            {% for attr in attrs|slice(0, 8) %}
                                <span class="cluster-attr">{{ attr.name }}</span>
                            {% endfor %}
                            {% if attrs|length > 8 %}
                                <span class="cluster-attr" style="opacity: 0.6;">+{{ attrs|length - 8 }} more</span>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}
                {% if cmds|length > 0 %}
                    <div class="cluster-details-section">
                        <div class="cluster-details-label">Commands ({{ cmds|length }})</div>
                        <div class="cluster-details-list">
                            {% for cmd in cmds|slice(0, 6) %}
                                <span class="cluster-attr">{{ cmd.name }}</span>
                            {% endfor %}
                            {% if cmds|length > 6 %}
                                <span class="cluster-attr" style="opacity: 0.6;">+{{ cmds|length - 6 }} more</span>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}
            </span>
        {% endif %}
    </span>
{% endmacro %}

