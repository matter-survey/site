{% extends 'base.html.twig' %}

{% block title %}{{ vendor.name }} - Matter Survey{% endblock %}

{% block og_title %}{{ vendor.name }} - Matter Device Manufacturer{% endblock %}
{% block og_description %}{{ vendor.name }} is a Matter smart home device manufacturer with {{ totalProducts }} certified product{{ totalProducts != 1 ? 's' : '' }} and {{ totalDevices }} device{{ totalDevices != 1 ? 's' : '' }} seen. Browse their Matter-compatible products and capabilities.{% endblock %}
{% block og_type %}profile{% endblock %}

{% block structured_data %}
<script type="application/ld+json">
{
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": {{ vendor.name|json_encode|raw }},
    "description": {{ ("Matter smart home device manufacturer with " ~ totalProducts ~ " certified product(s)")|json_encode|raw }},
    "url": "{{ url('vendor_show', {slug: vendor.slug}) }}",
    "additionalProperty": [
        {
            "@type": "PropertyValue",
            "name": "Matter Vendor ID",
            "value": "{{ vendor.specId ?? 'N/A' }}"
        },
        {
            "@type": "PropertyValue",
            "name": "Certified Products",
            "value": "{{ totalProducts }}"
        },
        {
            "@type": "PropertyValue",
            "name": "Devices Seen",
            "value": "{{ totalDevices }}"
        }
    ]
}
</script>
{% endblock %}

{% block extra_styles %}
    .breadcrumb {
        margin-bottom: 1rem;
        font-size: 0.875rem;
    }

    .breadcrumb a {
        color: var(--primary);
        text-decoration: none;
    }

    .breadcrumb a:hover {
        text-decoration: underline;
    }

    .vendor-header {
        background: white;
        border-radius: 0.5rem;
        border: 1px solid var(--gray-200);
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .vendor-header h1 {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .vendor-header .meta {
        color: var(--gray-500);
        font-size: 0.875rem;
    }

    .vendor-header .meta a {
        color: var(--primary);
        text-decoration: none;
    }

    .vendor-header .meta a:hover {
        text-decoration: underline;
    }

    .vendor-header .legal-name {
        color: var(--gray-500);
        font-size: 0.875rem;
        margin: 0.25rem 0 0.5rem;
    }

    .vendor-analytics {
        background: white;
        border-radius: 0.5rem;
        border: 1px solid var(--gray-200);
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .vendor-analytics h2 {
        font-size: 1.125rem;
        font-weight: 600;
        margin: 0 0 1rem;
    }

    .analytics-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
    }

    .analytics-card {
        background: var(--gray-50);
        border-radius: 0.375rem;
        padding: 1rem;
    }

    .analytics-card h3 {
        font-size: 0.875rem;
        font-weight: 600;
        color: var(--gray-600);
        margin: 0 0 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.025em;
    }

    .analytics-card .stat-row {
        font-size: 0.875rem;
        color: var(--gray-700);
        padding: 0.25rem 0;
    }

    .analytics-card .percentage {
        font-size: 2rem;
        font-weight: 700;
        color: var(--primary);
        line-height: 1;
    }

    .analytics-card p {
        font-size: 0.875rem;
        color: var(--gray-500);
        margin: 0.25rem 0 0;
    }

    .device-links {
        display: inline-flex;
        gap: 0.5rem;
        margin-top: 0.25rem;
    }

    .device-links a {
        font-size: 1rem;
        text-decoration: none;
        opacity: 0.7;
        transition: opacity 0.15s;
    }

    .device-links a:hover {
        opacity: 1;
    }

    .device-list {
        background: white;
        border-radius: 0.5rem;
        border: 1px solid var(--gray-200);
        overflow: hidden;
    }

    .device-item {
        padding: 1rem;
        border-bottom: 1px solid var(--gray-200);
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }

    .device-item:last-child {
        border-bottom: none;
    }

    .device-item:hover {
        background: var(--gray-50);
    }

    .device-info h3 {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 0.25rem;
    }

    .device-info h3 a {
        color: var(--gray-900);
        text-decoration: none;
    }

    .device-info h3 a:hover {
        color: var(--primary);
    }

    .device-meta {
        font-size: 0.875rem;
        color: var(--gray-500);
    }

    .device-badges {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .pagination {
        display: flex;
        justify-content: center;
        gap: 0.5rem;
        margin: 2rem 0;
    }

    .pagination a, .pagination span {
        padding: 0.5rem 1rem;
        border: 1px solid var(--gray-300);
        border-radius: 0.375rem;
        text-decoration: none;
        color: var(--gray-700);
    }

    .pagination a:hover {
        background: var(--gray-100);
    }

    .pagination .current {
        background: var(--primary);
        color: white;
        border-color: var(--primary);
    }

    .empty-state {
        text-align: center;
        padding: 3rem;
        color: var(--gray-500);
    }

    .section-title {
        font-size: 1.125rem;
        font-weight: 600;
        margin: 1.5rem 0 1rem;
        color: var(--gray-800);
    }

    .product-list {
        background: white;
        border-radius: 0.5rem;
        border: 1px solid var(--gray-200);
        overflow: hidden;
    }

    .product-item {
        padding: 0.75rem 1rem;
        border-bottom: 1px solid var(--gray-200);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .product-item:last-child {
        border-bottom: none;
    }

    .product-item:hover {
        background: var(--gray-50);
    }

    .product-name {
        font-weight: 500;
    }

    .product-id {
        font-size: 0.875rem;
        color: var(--gray-500);
        font-family: monospace;
    }

    .product-badges {
        display: flex;
        gap: 0.25rem;
        flex-wrap: wrap;
        margin-top: 0.25rem;
    }

    .badge-discovery {
        background: var(--gray-100);
        color: var(--gray-600);
        padding: 0.125rem 0.375rem;
        border-radius: 0.25rem;
        font-size: 0.75rem;
        font-weight: 500;
    }

    .badge-ble { background: #dbeafe; color: #1d4ed8; }
    .badge-softap { background: #fef3c7; color: #92400e; }
    .badge-network { background: #d1fae5; color: #065f46; }

    .product-links {
        display: inline-flex;
        gap: 0.5rem;
        margin-left: 0.5rem;
    }

    .product-links a {
        font-size: 0.875rem;
        text-decoration: none;
        opacity: 0.7;
        transition: opacity 0.15s;
    }

    .product-links a:hover {
        opacity: 1;
    }
{% endblock %}

{% block body %}
    <div class="breadcrumb">
        <a href="{{ path('device_index') }}">Home</a>
        &rarr;
        <a href="{{ path('vendor_index') }}">Vendors</a>
        &rarr;
        {{ vendor.name }}
    </div>

    <div class="vendor-header">
        <h1>{{ vendor.name }}</h1>
        {% if vendor.companyLegalName and vendor.companyLegalName != vendor.name %}
            <p class="legal-name">{{ vendor.companyLegalName }}</p>
        {% endif %}
        <div class="meta">
            Vendor ID: {{ vendor.specId ?? 'N/A' }}
            &middot;
            {{ totalProducts }} certified product{{ totalProducts != 1 ? 's' : '' }}
            &middot;
            {{ totalDevices }} device{{ totalDevices != 1 ? 's' : '' }} seen
            {% if vendor.vendorLandingPageURL %}
                &middot;
                <a href="{{ vendor.vendorLandingPageURL }}" target="_blank" rel="noopener">Website &rarr;</a>
            {% endif %}
        </div>
    </div>

    {# Analytics Section - only show if vendor has devices with endpoint data #}
    {% if deviceTypeDistribution is not empty or clusterCapabilities is not empty %}
    <div class="vendor-analytics">
        <h2>Analytics</h2>
        <div class="analytics-grid">
            {# Device Types Distribution #}
            {% if deviceTypeDistribution is not empty %}
            <div class="analytics-card">
                <h3>Device Types</h3>
                {% for dt in deviceTypeDistribution|slice(0, 5) %}
                    <div class="stat-row">{{ dt.name }}: {{ dt.count }}</div>
                {% endfor %}
            </div>
            {% endif %}

            {# Binding Support #}
            {% if bindingStats.total > 0 %}
            <div class="analytics-card">
                <h3>Binding Support</h3>
                <div class="percentage">{{ bindingStats.percentage }}%</div>
                <p>{{ bindingStats.withBinding }}/{{ bindingStats.total }} devices</p>
            </div>
            {% endif %}

            {# Top Clusters #}
            {% if clusterCapabilities is not empty %}
            <div class="analytics-card">
                <h3>Top Clusters</h3>
                {% for c in clusterCapabilities|slice(0, 6) %}
                    <div class="stat-row">{{ c.name }}: {{ c.count }}</div>
                {% endfor %}
            </div>
            {% endif %}
        </div>
    </div>
    {% endif %}

    {# Certified Products from DCL Registry #}
    <h2 class="section-title">Certified Products ({{ totalProducts }})</h2>
    {% if products is empty %}
        <div class="empty-state">
            <p>No certified products found in the DCL registry for this vendor.</p>
        </div>
    {% else %}
        <div class="product-list">
            {% for product in products %}
                <div class="product-item">
                    <div>
                        <span class="product-name">{{ product.productName ?? 'Unknown Product' }}</span>
                        {% if product.productUrl or product.supportUrl or product.userManualUrl or product.commissioningCustomFlowUrl or product.maintenanceUrl %}
                            <span class="product-links">
                                {% if product.productUrl %}<a href="{{ product.productUrl }}" target="_blank" rel="noopener" title="Product Page">&#128722;</a>{% endif %}
                                {% if product.supportUrl %}<a href="{{ product.supportUrl }}" target="_blank" rel="noopener" title="Support">&#128735;</a>{% endif %}
                                {% if product.userManualUrl %}<a href="{{ product.userManualUrl }}" target="_blank" rel="noopener" title="Manual">&#128214;</a>{% endif %}
                                {% if product.commissioningCustomFlowUrl %}<a href="{{ product.commissioningCustomFlowUrl }}" target="_blank" rel="noopener" title="Setup Guide">&#9881;</a>{% endif %}
                                {% if product.maintenanceUrl %}<a href="{{ product.maintenanceUrl }}" target="_blank" rel="noopener" title="Firmware/Maintenance">&#128260;</a>{% endif %}
                            </span>
                        {% endif %}
                        {% if product.discoveryCapabilitiesBitmask %}
                            <div class="product-badges">
                                {% if product.discoveryCapabilitiesBitmask b-and 1 %}<span class="badge-discovery badge-softap">SoftAP</span>{% endif %}
                                {% if product.discoveryCapabilitiesBitmask b-and 2 %}<span class="badge-discovery badge-ble">BLE</span>{% endif %}
                                {% if product.discoveryCapabilitiesBitmask b-and 4 %}<span class="badge-discovery badge-network">On Network</span>{% endif %}
                            </div>
                        {% endif %}
                    </div>
                    <span class="product-id">{{ product.vendorId }}-{{ product.productId }}</span>
                </div>
            {% endfor %}
        </div>
        {% if totalProducts > 100 %}
            <p style="text-align: center; color: var(--gray-500); margin-top: 0.5rem; font-size: 0.875rem;">
                Showing first 100 of {{ totalProducts }} products
            </p>
        {% endif %}
    {% endif %}

    {# Devices Seen from Telemetry #}
    <h2 class="section-title">Devices Seen ({{ totalDevices }})</h2>
    {% if devices is empty %}
        <div class="empty-state">
            <p>No devices from this vendor have been submitted via telemetry yet.</p>
        </div>
    {% else %}
        <div class="device-list">
            {% for device in devices %}
                <div class="device-item">
                    <div class="device-info">
                        <h3>
                            <a href="{{ path('device_show', {slug: device.slug}) }}">
                                {{ device.product_name ?? 'Unknown Product' }}
                            </a>
                        </h3>
                        <div class="device-meta">
                            Product ID: {{ device.product_id ?? 'N/A' }}
                            &middot;
                            Seen {{ device.submission_count|number_format }} time{{ device.submission_count != 1 ? 's' : '' }}
                        </div>
                        {% if device.product_url or device.support_url or device.user_manual_url %}
                            <div class="device-links">
                                {% if device.product_url %}<a href="{{ device.product_url }}" target="_blank" rel="noopener" title="Product Page">&#128722;</a>{% endif %}
                                {% if device.support_url %}<a href="{{ device.support_url }}" target="_blank" rel="noopener" title="Support">&#128735;</a>{% endif %}
                                {% if device.user_manual_url %}<a href="{{ device.user_manual_url }}" target="_blank" rel="noopener" title="Manual">&#128214;</a>{% endif %}
                            </div>
                        {% endif %}
                    </div>
                    <div class="device-badges">
                        {% if device.supports_binding %}
                            <span class="badge badge-binding">Binding</span>
                        {% endif %}
                        <span class="badge badge-endpoints">{{ device.endpoint_count }} endpoint{{ device.endpoint_count != 1 ? 's' : '' }}</span>
                    </div>
                </div>
            {% endfor %}
        </div>

        {% if totalPages > 1 %}
            <div class="pagination">
                {% if page > 1 %}
                    <a href="{{ path('vendor_show', {slug: vendor.slug, page: page - 1}) }}">&laquo; Prev</a>
                {% endif %}

                {% for i in max(1, page - 2)..min(totalPages, page + 2) %}
                    {% if i == page %}
                        <span class="current">{{ i }}</span>
                    {% else %}
                        <a href="{{ path('vendor_show', {slug: vendor.slug, page: i}) }}">{{ i }}</a>
                    {% endif %}
                {% endfor %}

                {% if page < totalPages %}
                    <a href="{{ path('vendor_show', {slug: vendor.slug, page: page + 1}) }}">Next &raquo;</a>
                {% endif %}
            </div>
        {% endif %}
    {% endif %}
{% endblock %}
