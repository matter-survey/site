{% extends 'base.html.twig' %}

{% block title %}{{ vendor.name }} - Matter Survey{% endblock %}

{% block og_title %}{{ vendor.name }} - Matter Device Manufacturer{% endblock %}
{% block og_description %}{{ vendor.name }} is a Matter smart home device manufacturer with {{ totalProducts }} certified product{{ totalProducts != 1 ? 's' : '' }} and {{ totalDevices }} device{{ totalDevices != 1 ? 's' : '' }} seen. Browse their Matter-compatible products and capabilities.{% endblock %}
{% block og_type %}profile{% endblock %}

{% block structured_data %}
<script type="application/ld+json">
{
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": {{ vendor.name|json_encode|raw }},
    "description": {{ ("Matter smart home device manufacturer with " ~ totalProducts ~ " certified product(s)")|json_encode|raw }},
    "url": "{{ url('vendor_show', {slug: vendor.slug}) }}",
    "additionalProperty": [
        {
            "@type": "PropertyValue",
            "name": "Matter Vendor ID",
            "value": "{{ vendor.specId ?? 'N/A' }}"
        },
        {
            "@type": "PropertyValue",
            "name": "Certified Products",
            "value": "{{ totalProducts }}"
        },
        {
            "@type": "PropertyValue",
            "name": "Devices Seen",
            "value": "{{ totalDevices }}"
        }
    ]
}
</script>
{% endblock %}

{% block extra_styles %}
    .breadcrumb {
        margin-bottom: 1rem;
        font-size: 0.875rem;
    }

    .breadcrumb a {
        color: var(--primary);
        text-decoration: none;
    }

    .breadcrumb a:hover {
        text-decoration: underline;
    }

    .vendor-header {
        background: white;
        border-radius: 0.5rem;
        border: 1px solid var(--gray-200);
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .vendor-header h1 {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .vendor-header .meta {
        color: var(--gray-500);
        font-size: 0.875rem;
    }

    .device-list {
        background: white;
        border-radius: 0.5rem;
        border: 1px solid var(--gray-200);
        overflow: hidden;
    }

    .device-item {
        padding: 1rem;
        border-bottom: 1px solid var(--gray-200);
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }

    .device-item:last-child {
        border-bottom: none;
    }

    .device-item:hover {
        background: var(--gray-50);
    }

    .device-info h3 {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 0.25rem;
    }

    .device-info h3 a {
        color: var(--gray-900);
        text-decoration: none;
    }

    .device-info h3 a:hover {
        color: var(--primary);
    }

    .device-meta {
        font-size: 0.875rem;
        color: var(--gray-500);
    }

    .device-badges {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .pagination {
        display: flex;
        justify-content: center;
        gap: 0.5rem;
        margin: 2rem 0;
    }

    .pagination a, .pagination span {
        padding: 0.5rem 1rem;
        border: 1px solid var(--gray-300);
        border-radius: 0.375rem;
        text-decoration: none;
        color: var(--gray-700);
    }

    .pagination a:hover {
        background: var(--gray-100);
    }

    .pagination .current {
        background: var(--primary);
        color: white;
        border-color: var(--primary);
    }

    .empty-state {
        text-align: center;
        padding: 3rem;
        color: var(--gray-500);
    }

    .section-title {
        font-size: 1.125rem;
        font-weight: 600;
        margin: 1.5rem 0 1rem;
        color: var(--gray-800);
    }

    .product-list {
        background: white;
        border-radius: 0.5rem;
        border: 1px solid var(--gray-200);
        overflow: hidden;
    }

    .product-item {
        padding: 0.75rem 1rem;
        border-bottom: 1px solid var(--gray-200);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .product-item:last-child {
        border-bottom: none;
    }

    .product-item:hover {
        background: var(--gray-50);
    }

    .product-name {
        font-weight: 500;
    }

    .product-id {
        font-size: 0.875rem;
        color: var(--gray-500);
        font-family: monospace;
    }
{% endblock %}

{% block body %}
    <div class="breadcrumb">
        <a href="{{ path('device_index') }}">Home</a>
        &rarr;
        <a href="{{ path('vendor_index') }}">Vendors</a>
        &rarr;
        {{ vendor.name }}
    </div>

    <div class="vendor-header">
        <h1>{{ vendor.name }}</h1>
        <div class="meta">
            Vendor ID: {{ vendor.specId ?? 'N/A' }}
            &middot;
            {{ totalProducts }} certified product{{ totalProducts != 1 ? 's' : '' }}
            &middot;
            {{ totalDevices }} device{{ totalDevices != 1 ? 's' : '' }} seen
        </div>
    </div>

    {# Certified Products from DCL Registry #}
    <h2 class="section-title">Certified Products ({{ totalProducts }})</h2>
    {% if products is empty %}
        <div class="empty-state">
            <p>No certified products found in the DCL registry for this vendor.</p>
        </div>
    {% else %}
        <div class="product-list">
            {% for product in products %}
                <div class="product-item">
                    <span class="product-name">{{ product.productName ?? 'Unknown Product' }}</span>
                    <span class="product-id">{{ product.vendorId }}-{{ product.productId }}</span>
                </div>
            {% endfor %}
        </div>
        {% if totalProducts > 100 %}
            <p style="text-align: center; color: var(--gray-500); margin-top: 0.5rem; font-size: 0.875rem;">
                Showing first 100 of {{ totalProducts }} products
            </p>
        {% endif %}
    {% endif %}

    {# Devices Seen from Telemetry #}
    <h2 class="section-title">Devices Seen ({{ totalDevices }})</h2>
    {% if devices is empty %}
        <div class="empty-state">
            <p>No devices from this vendor have been submitted via telemetry yet.</p>
        </div>
    {% else %}
        <div class="device-list">
            {% for device in devices %}
                <div class="device-item">
                    <div class="device-info">
                        <h3>
                            <a href="{{ path('device_show', {id: device.id}) }}">
                                {{ device.product_name ?? 'Unknown Product' }}
                            </a>
                        </h3>
                        <div class="device-meta">
                            Product ID: {{ device.product_id ?? 'N/A' }}
                            &middot;
                            Seen {{ device.submission_count|number_format }} time{{ device.submission_count != 1 ? 's' : '' }}
                        </div>
                    </div>
                    <div class="device-badges">
                        {% if device.supports_binding %}
                            <span class="badge badge-binding">Binding</span>
                        {% endif %}
                        <span class="badge badge-endpoints">{{ device.endpoint_count }} endpoint{{ device.endpoint_count != 1 ? 's' : '' }}</span>
                    </div>
                </div>
            {% endfor %}
        </div>

        {% if totalPages > 1 %}
            <div class="pagination">
                {% if page > 1 %}
                    <a href="{{ path('vendor_show', {slug: vendor.slug, page: page - 1}) }}">&laquo; Prev</a>
                {% endif %}

                {% for i in max(1, page - 2)..min(totalPages, page + 2) %}
                    {% if i == page %}
                        <span class="current">{{ i }}</span>
                    {% else %}
                        <a href="{{ path('vendor_show', {slug: vendor.slug, page: i}) }}">{{ i }}</a>
                    {% endif %}
                {% endfor %}

                {% if page < totalPages %}
                    <a href="{{ path('vendor_show', {slug: vendor.slug, page: page + 1}) }}">Next &raquo;</a>
                {% endif %}
            </div>
        {% endif %}
    {% endif %}
{% endblock %}
