{% extends 'base.html.twig' %}

{% from 'components/_star_rating.html.twig' import starsBadge %}

{% block title %}{% if devices|length > 0 %}Compare {{ devices|length }} Devices{% else %}Compare Devices{% endif %} - Matter Survey{% endblock %}

{% block og_title %}{% if devices|length > 0 %}Compare {{ devices|length }} Matter Devices{% else %}Compare Matter Devices{% endif %}{% endblock %}
{% block og_description %}{% if devices|length > 0 %}Side-by-side comparison of {{ devices|map(d => d.data.product_name)|join(', ') }}. Compare capabilities, features, and specifications.{% else %}Compare up to 5 Matter smart home devices side-by-side. See which features each device supports.{% endif %}{% endblock %}

{% block structured_data %}
<script type="application/ld+json">
{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "name": "Compare Matter Devices",
    "description": "Side-by-side comparison of Matter smart home device capabilities",
    "url": "{{ url('compare_empty') }}"{% if devices|length > 0 %},
    "mainEntity": {
        "@type": "ItemList",
        "numberOfItems": {{ devices|length }},
        "itemListElement": [
            {% for device in devices %}
            {
                "@type": "ListItem",
                "position": {{ loop.index }},
                "item": {
                    "@type": "Product",
                    "name": "{{ device.data.product_name|default('Unknown')|e('js') }}",
                    "manufacturer": {
                        "@type": "Organization",
                        "name": "{{ device.data.vendor_name|default('Unknown')|e('js') }}"
                    }
                }
            }{% if not loop.last %},{% endif %}
            {% endfor %}
        ]
    }{% endif %}
}
</script>
{% endblock %}

{% block extra_styles %}
    .compare-container {
        margin-bottom: 2rem;
    }

    .compare-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .compare-header h2 {
        font-size: 1.5rem;
        font-weight: 600;
        margin: 0;
    }

    .compare-subtitle {
        color: var(--gray-500);
        font-size: 0.875rem;
    }

    .compare-empty {
        text-align: center;
        padding: 3rem;
        background: white;
        border-radius: 0.5rem;
        border: 1px solid var(--gray-200);
    }

    .compare-empty h3 {
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
    }

    .compare-empty p {
        color: var(--gray-500);
        margin-bottom: 1.5rem;
    }

    .compare-search-large {
        max-width: 400px;
        margin: 0 auto;
    }

    .compare-search-large input {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 1px solid var(--gray-300);
        border-radius: 0.375rem;
        font-size: 1rem;
    }

    .compare-search-large input:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
    }

    .compare-search-results {
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        background: white;
        border: 1px solid var(--gray-200);
        border-radius: 0.375rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        max-height: 300px;
        overflow-y: auto;
        z-index: 100;
    }

    .compare-search-item {
        padding: 0.75rem 1rem;
        cursor: pointer;
        border-bottom: 1px solid var(--gray-100);
    }

    .compare-search-item:last-child {
        border-bottom: none;
    }

    .compare-search-item:hover,
    .compare-search-item.selected {
        background: var(--gray-50);
    }

    .compare-search-item-name {
        font-weight: 500;
    }

    .compare-search-item-vendor {
        color: var(--gray-500);
        font-size: 0.875rem;
        margin-left: 0.5rem;
    }

    .compare-search-empty {
        padding: 1rem;
        text-align: center;
        color: var(--gray-500);
    }

    /* Comparison table */
    .compare-table-wrapper {
        overflow-x: auto;
        background: white;
        border-radius: 0.5rem;
        border: 1px solid var(--gray-200);
    }

    .compare-table {
        width: 100%;
        border-collapse: collapse;
        min-width: 600px;
    }

    .compare-table th,
    .compare-table td {
        padding: 0.75rem;
        text-align: left;
        border-bottom: 1px solid var(--gray-200);
    }

    .compare-table thead th {
        background: var(--gray-50);
        font-weight: 600;
        position: sticky;
        top: 0;
        z-index: 10;
    }

    /* Device header columns */
    .device-column {
        min-width: 160px;
        max-width: 200px;
        vertical-align: top;
    }

    .device-header-card {
        position: relative;
    }

    .device-header-card .remove-device {
        position: absolute;
        top: -0.25rem;
        right: -0.25rem;
        width: 1.25rem;
        height: 1.25rem;
        border: none;
        background: var(--gray-200);
        color: var(--gray-500);
        border-radius: 50%;
        cursor: pointer;
        font-size: 0.75rem;
        line-height: 1;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .device-header-card .remove-device:hover {
        background: var(--gray-300);
        color: var(--gray-700);
    }

    .device-header-card .device-name {
        display: block;
        font-weight: 500;
        color: var(--gray-900);
        text-decoration: none;
        font-size: 0.875rem;
        line-height: 1.3;
        margin-bottom: 0.25rem;
    }

    .device-header-card .device-name:hover {
        color: var(--primary);
    }

    .device-header-card .device-vendor {
        color: var(--gray-500);
        font-size: 0.75rem;
        margin-bottom: 0.5rem;
    }

    /* Add device column */
    .add-device-column {
        min-width: 160px;
        vertical-align: top;
    }

    .add-device-card {
        position: relative;
    }

    .add-device-search {
        position: relative;
    }

    .add-device-search input {
        width: 100%;
        padding: 0.5rem 0.75rem;
        border: 1px dashed var(--gray-300);
        border-radius: 0.375rem;
        font-size: 0.875rem;
        background: var(--gray-50);
    }

    .add-device-search input:focus {
        outline: none;
        border-style: solid;
        border-color: var(--primary);
        background: white;
    }

    .add-device-hint {
        color: var(--gray-500);
        font-size: 0.75rem;
        margin-top: 0.5rem;
    }

    /* Capability rows */
    .capability-header {
        min-width: 200px;
    }

    .category-row td {
        background: var(--gray-50);
        font-weight: 600;
        font-size: 0.875rem;
        color: var(--gray-700);
    }

    .capability-row {
        transition: background 0.1s;
    }

    .capability-row:hover {
        background: var(--gray-50);
    }

    .capability-row.expandable {
        cursor: pointer;
    }

    .capability-row.expanded {
        background: var(--gray-50);
    }

    .cap-name-cell {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .expand-icon {
        color: var(--gray-400);
        font-size: 0.75rem;
        width: 1rem;
        flex-shrink: 0;
    }

    .cap-emoji {
        flex-shrink: 0;
    }

    .cap-label {
        flex-grow: 1;
    }

    .spec-badge {
        font-size: 0.625rem;
        color: var(--gray-500);
        background: var(--gray-100);
        padding: 0.125rem 0.375rem;
        border-radius: 0.25rem;
        margin-left: 0.5rem;
    }

    .capability-status {
        text-align: center;
        font-size: 1rem;
    }

    .capability-status.supported {
        color: var(--green-700);
    }

    .capability-status.unsupported {
        color: var(--gray-400);
    }

    .capability-status .status-icon {
        font-weight: bold;
    }

    /* Capability details row */
    .capability-details-row td {
        padding: 0;
        background: var(--gray-50);
    }

    .capability-details-row .details-wrapper {
        display: flex;
        border-top: 1px solid var(--gray-200);
    }

    .capability-details-row .details-label {
        min-width: 200px;
        padding: 0.75rem;
        font-size: 0.75rem;
        color: var(--gray-500);
        background: var(--gray-100);
    }

    .capability-details-row .device-details {
        min-width: 160px;
        max-width: 200px;
        padding: 0.75rem;
        font-size: 0.75rem;
        border-left: 1px solid var(--gray-200);
    }

    .capability-details-row .no-data {
        color: var(--gray-400);
        font-style: italic;
    }

    .capability-details-row .detail-section {
        margin-bottom: 0.75rem;
    }

    .capability-details-row .detail-section:last-child {
        margin-bottom: 0;
    }

    .capability-details-row h5 {
        font-size: 0.625rem;
        font-weight: 600;
        color: var(--gray-600);
        text-transform: uppercase;
        margin-bottom: 0.25rem;
    }

    .capability-details-row ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .capability-details-row li {
        display: flex;
        align-items: flex-start;
        gap: 0.25rem;
        margin-bottom: 0.125rem;
    }

    .capability-details-row .cap-impl-icon {
        flex-shrink: 0;
        width: 0.875rem;
    }

    .capability-details-row .implemented .cap-impl-icon {
        color: var(--green-700);
    }

    .capability-details-row .not-implemented .cap-impl-icon {
        color: #dc2626;
    }

    .capability-details-row .unknown .cap-impl-icon {
        color: var(--gray-400);
    }

    .feature-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.25rem;
    }

    .feature-tag {
        background: var(--blue-100);
        color: var(--blue-700);
        font-size: 0.625rem;
        padding: 0.125rem 0.375rem;
        border-radius: 0.25rem;
    }

    /* Compare actions */
    .compare-actions {
        margin-top: 1.5rem;
        display: flex;
        gap: 1rem;
        justify-content: center;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border-radius: 0.375rem;
        font-size: 0.875rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.15s;
        text-decoration: none;
    }

    .btn-primary {
        background: var(--primary);
        color: white;
        border: 1px solid var(--primary);
    }

    .btn-primary:hover {
        background: var(--primary-dark);
    }

    .btn-secondary {
        background: white;
        color: var(--gray-700);
        border: 1px solid var(--gray-300);
    }

    .btn-secondary:hover {
        background: var(--gray-50);
    }

    .add-device-placeholder {
        background: var(--gray-50);
    }

    /* Responsive */
    @media (max-width: 768px) {
        .compare-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .compare-table-wrapper {
            margin: 0 -1rem;
            border-radius: 0;
            border-left: none;
            border-right: none;
        }

        .device-column,
        .add-device-column {
            min-width: 140px;
        }

        .capability-header {
            min-width: 160px;
        }
    }
{% endblock %}

{% block body %}
<div class="compare-container"
     data-controller="compare"
     data-compare-slugs-value="{{ slugString }}"
     data-compare-search-url-value="{{ path('compare_search') }}"
     data-compare-base-url-value="{{ path('compare_empty') }}">

    <div class="compare-header">
        <div>
            <h2>Compare Devices</h2>
            <p class="compare-subtitle">
                {% if devices|length > 0 %}
                    {{ devices|length }}/5 devices selected
                {% else %}
                    Select up to 5 devices to compare
                {% endif %}
            </p>
        </div>
        {% if devices|length > 0 %}
            <div class="compare-actions">
                <button class="btn btn-secondary" data-action="compare#copyUrl">
                    Copy Link
                </button>
            </div>
        {% endif %}
    </div>

    {% if devices|length == 0 %}
        {# Empty state - show search #}
        <div class="compare-empty">
            <h3>Start Comparing Devices</h3>
            <p>Search for devices to add to your comparison</p>
            <div class="compare-search-large" style="position: relative;">
                <input type="text"
                       placeholder="Search for a device..."
                       data-compare-target="searchInput"
                       data-action="input->compare#search focus->compare#search keydown->compare#onKeydown"
                       autocomplete="off">
                <div class="compare-search-results" data-compare-target="results" style="display: none;"></div>
            </div>
        </div>
    {% else %}
        {# Comparison table #}
        <div class="compare-table-wrapper">
            <table class="compare-table">
                <thead>
                    <tr>
                        <th class="capability-header">Capability</th>
                        {% for device in devices %}
                            <th class="device-column">
                                {% include 'compare/_device_header.html.twig' with {
                                    device: device,
                                    score: deviceScores[device.slug]|default(null)
                                } %}
                            </th>
                        {% endfor %}
                        {% if devices|length < 5 %}
                            <th class="add-device-column">
                                {% include 'compare/_add_device.html.twig' with {
                                    remainingSlots: 5 - devices|length
                                } %}
                            </th>
                        {% endif %}
                    </tr>
                </thead>
                <tbody>
                    {% for catKey, category in aggregatedCapabilities %}
                        <tr class="category-row">
                            <td colspan="{{ devices|length + 1 + (devices|length < 5 ? 1 : 0) }}">
                                {{ category.label }}
                            </td>
                        </tr>
                        {% for capKey, capability in category.capabilities %}
                            {% include 'compare/_capability_row.html.twig' with {
                                capability: capability,
                                capKey: capKey,
                                devices: devices,
                                deviceCapabilities: deviceCapabilities,
                                showAddColumn: devices|length < 5
                            } %}
                        {% endfor %}
                    {% endfor %}

                    {# Summary row #}
                    <tr class="category-row">
                        <td colspan="{{ devices|length + 1 + (devices|length < 5 ? 1 : 0) }}">
                            Summary
                        </td>
                    </tr>
                    <tr class="capability-row">
                        <td class="capability-header">
                            <div class="cap-name-cell">
                                <span class="expand-icon"></span>
                                <span class="cap-emoji">&#128202;</span>
                                <span class="cap-label">Feature Score</span>
                            </div>
                        </td>
                        {% for device in devices %}
                            {% set caps = deviceCapabilities[device.slug]|default({}) %}
                            <td class="capability-status">
                                {% if caps.summary is defined %}
                                    <strong>{{ caps.summary.percentage }}%</strong>
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                        {% endfor %}
                        {% if devices|length < 5 %}
                            <td class="add-device-placeholder"></td>
                        {% endif %}
                    </tr>
                    <tr class="capability-row">
                        <td class="capability-header">
                            <div class="cap-name-cell">
                                <span class="expand-icon"></span>
                                <span class="cap-emoji">&#11088;</span>
                                <span class="cap-label">Star Rating</span>
                            </div>
                        </td>
                        {% for device in devices %}
                            {% set score = deviceScores[device.slug]|default(null) %}
                            <td class="capability-status">
                                {% if score and score.starRating is defined %}
                                    {{ starsBadge(score.starRating, score.overallScore, score.isCompliant) }}
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                        {% endfor %}
                        {% if devices|length < 5 %}
                            <td class="add-device-placeholder"></td>
                        {% endif %}
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="compare-actions">
            <a href="{{ path('device_index') }}" class="btn btn-secondary">
                Browse More Devices
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}
